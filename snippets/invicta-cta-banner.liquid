{% comment %}
  ============================================
  INVICTA CTA BANNER v1.0
  ============================================
  Reusable promotional banner with configurable theme.
  
  Params:
    heading:     (string) Banner heading text
    subtext:     (string) Supporting text below heading
    button_text: (string) CTA button label
    button_url:  (string) CTA button destination URL
    theme:       (string) 'brand' (red bg) | 'subtle' (grey bg) | 'dark' (dark bg)
  
  Usage:
    {% render 'invicta-cta-banner', heading: 'Trade Accounts Available', subtext: 'Get exclusive pricing', button_text: 'Apply Now', button_url: '/pages/trade-account', theme: 'brand' %}
  
  Version: 1.0.0
  ============================================
{% endcomment %}

{%- liquid
  unless theme
    assign theme = 'brand'
  endunless
  unless button_text
    assign button_text = 'Learn More'
  endunless
-%}

{%- if heading != blank -%}
<div class="inv-cta-banner inv-cta-banner--{{ theme }}">
  <div class="inv-cta-banner__inner page-width">
    <div class="inv-cta-banner__content">
      <h2 class="inv-cta-banner__heading">{{ heading }}</h2>
      {%- if subtext != blank -%}
        <p class="inv-cta-banner__subtext">{{ subtext }}</p>
      {%- endif -%}
    </div>
    {%- if button_url != blank -%}
      <a href="{{ button_url }}" class="inv-cta-banner__btn">{{ button_text }}</a>
    {%- endif -%}
  </div>
</div>
{%- endif -%}

