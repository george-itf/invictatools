{% comment %}
  ============================================
  INVICTA TRUST BAR v2.0
  ============================================
  BOLD horizontal trust/confidence strip with
  Invicta branding, red accent icons, stronger
  visual presence.

  Params:
    style: 'compact' (product pages) | 'full' (cart/footer)

  Usage:
    {% render 'invicta-trust-bar', style: 'compact' %}
    {% render 'invicta-trust-bar', style: 'full' %}

  Version: 2.0.0
  ============================================
{% endcomment %}

{%- liquid
  unless style
    assign style = 'compact'
  endunless
-%}

<div class="inv-trust-bar inv-trust-bar--{{ style }}" role="complementary" aria-label="{{ 'invicta.trust_bar.aria_label' | t }}">
  <div class="inv-trust-bar__inner">
    <div class="inv-trust-bar__item">
      <span class="inv-trust-bar__icon-wrap">
        <svg class="inv-trust-bar__icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><polyline points="9 12 11 14 15 10"/></svg>
      </span>
      <span class="inv-trust-bar__label">{{ 'invicta.trust_bar.authorised_dealer' | t }}</span>
    </div>
    <div class="inv-trust-bar__divider" aria-hidden="true"></div>
    <div class="inv-trust-bar__item">
      <span class="inv-trust-bar__icon-wrap">
        <svg class="inv-trust-bar__icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
      </span>
      <span class="inv-trust-bar__label">{{ 'invicta.trust_bar.free_delivery' | t }}</span>
    </div>
    <div class="inv-trust-bar__divider" aria-hidden="true"></div>
    <div class="inv-trust-bar__item">
      <span class="inv-trust-bar__icon-wrap">
        <svg class="inv-trust-bar__icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
      </span>
      <span class="inv-trust-bar__label">{{ 'invicta.trust_bar.full_warranty' | t }}</span>
    </div>
    <div class="inv-trust-bar__divider" aria-hidden="true"></div>
    <div class="inv-trust-bar__item">
      <span class="inv-trust-bar__icon-wrap">
        <svg class="inv-trust-bar__icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
      </span>
      <span class="inv-trust-bar__label">{{ 'invicta.trust_bar.locations' | t }}</span>
    </div>
    <div class="inv-trust-bar__divider" aria-hidden="true"></div>
    <div class="inv-trust-bar__item">
      <span class="inv-trust-bar__icon-wrap">
        <svg class="inv-trust-bar__icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
      </span>
      <span class="inv-trust-bar__label">{{ 'invicta.trust_bar.years_trading' | t }}</span>
    </div>
  </div>
</div>

