{% comment %}
  ============================================
  INVICTA FEATURED COLLECTION v2.0
  ============================================
  Fixes:
  - Slider edge cutoff (cards no longer clipped)
  - Slider nav arrows positioned inline
  - Better spacing consistency
  - Improved mobile touch targets
  
  Trade 15.4.0 Compatible
  ============================================
{% endcomment %}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
  endif

  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign columns_desktop_int = section.settings.columns_desktop | plus: 0
  
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display > columns_desktop_int
    assign show_desktop_slider = true
  endif

  assign has_custom_description = false
  if section.settings.description != blank
    assign has_custom_description = true
  endif

  assign has_collection_description = false
  if section.settings.show_description and section.settings.collection.description != blank
    assign has_collection_description = true
  endif

  assign show_description = false
  if has_custom_description or has_collection_description
    assign show_description = true
  endif

  assign header_style = section.settings.header_style | default: 'bar'
  assign collection_count = section.settings.collection.all_products_count | default: 0
-%}

<div 
  class="inv-fc2" 
  id="collection-{{ section.id }}" 
  data-section-id="{{ section.id }}"
  data-section-type="invicta-featured-collection-v2"
>
  
  {%- comment -%} ================================
      HEADER SECTION
      ================================ {%- endcomment -%}
  {%- if section.settings.title != blank or section.settings.show_view_all -%}
    <div class="inv-fc2__header inv-fc2__header--{{ header_style }}">
      <div class="page-width">
        
        {%- case header_style -%}
        
          {%- comment -%} === BAR STYLE === {%- endcomment -%}
          {%- when 'bar' -%}
            <div class="inv-fc2__bar">
              <div class="inv-fc2__bar-left">
                {%- if section.settings.title != blank -%}
                  <h2 class="inv-fc2__title">{{ section.settings.title }}</h2>
                {%- endif -%}
                
                {%- if section.settings.show_product_count and collection_count > 0 -%}
                  <span class="inv-fc2__count">{{ collection_count }} products</span>
                {%- endif -%}
              </div>
              
              <div class="inv-fc2__bar-right">
                {%- comment -%} Inline nav arrows for desktop slider {%- endcomment -%}
                {%- if show_desktop_slider -%}
                  <div class="inv-fc2__inline-nav" aria-hidden="true">
                    <button 
                      type="button" 
                      class="inv-fc2__nav-btn inv-fc2__nav-btn--prev" 
                      aria-label="Previous products"
                    >
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                        <path d="M15 18l-6-6 6-6"/>
                      </svg>
                    </button>
                    <button 
                      type="button" 
                      class="inv-fc2__nav-btn inv-fc2__nav-btn--next" 
                      aria-label="Next products"
                    >
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                        <path d="M9 18l6-6-6-6"/>
                      </svg>
                    </button>
                  </div>
                {%- endif -%}
                
                {%- if section.settings.show_view_all and section.settings.collection != blank -%}
                  <a href="{{ section.settings.collection.url }}" class="inv-fc2__cta">
                    <span>View All</span>
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                {%- endif -%}
              </div>
            </div>
          
          {%- comment -%} === MODERN STYLE === {%- endcomment -%}
          {%- when 'modern' -%}
            <div class="inv-fc2__modern">
              <div class="inv-fc2__modern-left">
                {%- if section.settings.title != blank -%}
                  <div class="inv-fc2__badge-group">
                    <span class="inv-fc2__badge">{{ section.settings.title }}</span>
                    {%- if section.settings.show_product_count and collection_count > 0 -%}
                      <span class="inv-fc2__badge-count">{{ collection_count }}</span>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                
                {%- if show_description -%}
                  <p class="inv-fc2__desc">
                    {%- if has_collection_description -%}
                      {{ section.settings.collection.description | strip_html | truncate: 100 }}
                    {%- elsif has_custom_description -%}
                      {{ section.settings.description | strip_html | truncate: 100 }}
                    {%- endif -%}
                  </p>
                {%- endif -%}
              </div>
              
              <div class="inv-fc2__modern-right">
                {%- if show_desktop_slider -%}
                  <div class="inv-fc2__inline-nav" aria-hidden="true">
                    <button type="button" class="inv-fc2__nav-btn inv-fc2__nav-btn--prev" aria-label="Previous">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M15 18l-6-6 6-6"/></svg>
                    </button>
                    <button type="button" class="inv-fc2__nav-btn inv-fc2__nav-btn--next" aria-label="Next">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M9 18l6-6-6-6"/></svg>
                    </button>
                  </div>
                {%- endif -%}
                
                {%- if section.settings.show_view_all and section.settings.collection != blank -%}
                  <a href="{{ section.settings.collection.url }}" class="inv-fc2__cta inv-fc2__cta--outline">
                    <span>View Collection</span>
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                  </a>
                {%- endif -%}
              </div>
            </div>
            
        {%- endcase -%}
        
      </div>
    </div>
  {%- endif -%}
  
  {%- comment -%} ================================
      PRODUCT GRID / SLIDER
      ================================ {%- endcomment -%}
  <div class="inv-fc2__grid-wrapper{% if show_mobile_slider or show_desktop_slider %} inv-fc2__grid-wrapper--slider{% endif %}">
    <div class="page-width">
      
      {%- if section.settings.collection.products.size > 0 -%}
        
        {%- comment -%} Mask fade for slider edges {%- endcomment -%}
        {%- if show_mobile_slider or show_desktop_slider -%}
          <div class="inv-fc2__slider-container">
        {%- endif -%}
        
        <ul 
          class="inv-fc2__grid{% if show_mobile_slider or show_desktop_slider %} inv-fc2__grid--slider{% else %} inv-fc2__grid--{{ columns_desktop_int }}-col{% endif %}"
          id="Slider-{{ section.id }}"
          role="list"
          {% if show_mobile_slider or show_desktop_slider %}
            aria-label="{{ section.settings.title | default: 'Featured products' | strip_html }} carousel"
          {% endif %}
        >
          {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
            <li class="inv-fc2__item{% if show_mobile_slider or show_desktop_slider %} inv-fc2__slide{% endif %}">
              {% render 'invicta-product-card', product: product %}
            </li>
          {%- endfor -%}
          
          {%- comment -%} Spacer element for proper last-card visibility {%- endcomment -%}
          {%- if show_mobile_slider or show_desktop_slider -%}
            <li class="inv-fc2__spacer" aria-hidden="true"></li>
          {%- endif -%}
        </ul>
        
        {%- if show_mobile_slider or show_desktop_slider -%}
          </div>
        {%- endif -%}
        
      {%- else -%}
        
        {%- comment -%} Placeholder products {%- endcomment -%}
        <ul class="inv-fc2__grid inv-fc2__grid--{{ columns_desktop_int }}-col" role="list">
          {%- for i in (1..section.settings.columns_desktop) -%}
            <li class="inv-fc2__item">
              <div class="inv-fc2__placeholder">
                <div class="inv-fc2__placeholder-img">
                  <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21 15 16 10 5 21"/>
                  </svg>
                </div>
                <div class="inv-fc2__placeholder-body">
                  <div class="inv-fc2__placeholder-title"></div>
                  <div class="inv-fc2__placeholder-price"></div>
                </div>
              </div>
            </li>
          {%- endfor -%}
        </ul>
        
      {%- endif -%}
      
    </div>
  </div>
  
  {%- comment -%} Mobile View All {%- endcomment -%}
  {%- if section.settings.show_view_all and section.settings.collection != blank -%}
    <div class="inv-fc2__mobile-cta">
      <div class="page-width">
        <a href="{{ section.settings.collection.url }}" class="inv-fc2__mobile-btn">
          View All {{ section.settings.collection.title }}
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  {%- endif -%}
  
</div>

<style>
  /* ============================================
     INVICTA FEATURED COLLECTION v2.0
     Clean, professional - slider edge fix
     ============================================ */

  #collection-{{ section.id }} {
    /* Colour tokens */
    --inv-fc2-accent: #dc2626;
    --inv-fc2-accent-hover: #b91c1c;
    --inv-fc2-dark: #2d2d2d;
    --inv-fc2-dark-hover: #1a1a1a;
    --inv-fc2-bg: #f8f8f8;
    --inv-fc2-border: #e5e5e5;
    --inv-fc2-muted: rgba(255, 255, 255, 0.65);
    
    /* Spacing */
    --inv-fc2-gap: 12px;
    --inv-fc2-slide-width: 240px;
    --inv-fc2-slide-width-mobile: 156px;
  }

  .inv-fc2 {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: var(--inv-fc2-bg);
  }

  /* ----------------------------------------
     HEADER: BAR STYLE
     ---------------------------------------- */
  .inv-fc2__header {
    margin-bottom: 20px;
  }

  .inv-fc2__bar {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    background: var(--inv-fc2-dark);
    min-height: 52px;
    overflow: hidden;
    position: relative;
  }

  /* Red accent stripe */
  .inv-fc2__bar::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 5px;
    background: linear-gradient(180deg, #ef4444 0%, var(--inv-fc2-accent) 50%, #b91c1c 100%);
  }

  .inv-fc2__bar-left {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 20px 14px 24px;
  }

  .inv-fc2__title {
    font-size: 14px;
    font-weight: 800;
    color: #fff;
    margin: 0;
    line-height: 1.2;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  .inv-fc2__count {
    font-size: 11px;
    font-weight: 600;
    color: var(--inv-fc2-dark);
    background: #fff;
    padding: 3px 10px;
    border-radius: 20px;
  }

  .inv-fc2__bar-right {
    display: flex;
    align-items: stretch;
  }

  /* Inline nav (arrows in header) */
  .inv-fc2__inline-nav {
    display: none;
    align-items: center;
    gap: 2px;
    padding: 0 8px;
    border-left: 1px solid rgba(255, 255, 255, 0.15);
  }

  @media (min-width: 769px) {
    .inv-fc2__inline-nav {
      display: flex;
    }
  }

  .inv-fc2__nav-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: color 0.15s, background 0.15s;
  }

  .inv-fc2__nav-btn:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  .inv-fc2__nav-btn:focus-visible {
    outline: 2px solid var(--inv-fc2-accent);
    outline-offset: -2px;
  }

  .inv-fc2__nav-btn svg {
    width: 18px;
    height: 18px;
  }

  /* CTA button */
  .inv-fc2__cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0 28px;
    background: var(--inv-fc2-accent);
    color: #fff;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    text-decoration: none;
    transition: background 0.15s, gap 0.15s;
    position: relative;
  }

  .inv-fc2__cta::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 60%;
    background: rgba(255, 255, 255, 0.2);
  }

  .inv-fc2__cta:hover {
    background: var(--inv-fc2-accent-hover);
    gap: 12px;
  }

  .inv-fc2__cta:focus-visible {
    outline: 2px solid #fff;
    outline-offset: -4px;
  }

  .inv-fc2__cta svg {
    transition: transform 0.15s;
  }

  .inv-fc2__cta:hover svg {
    transform: translateX(2px);
  }

  /* ----------------------------------------
     HEADER: MODERN STYLE
     ---------------------------------------- */
  .inv-fc2__modern {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
  }

  .inv-fc2__modern-left {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .inv-fc2__badge-group {
    display: flex;
    align-items: stretch;
    gap: 0;
  }

  .inv-fc2__badge {
    display: inline-flex;
    align-items: center;
    padding: 10px 18px;
    background: var(--inv-fc2-dark);
    color: #fff;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .inv-fc2__badge-count {
    display: inline-flex;
    align-items: center;
    padding: 10px 14px;
    background: var(--inv-fc2-accent);
    color: #fff;
    font-size: 12px;
    font-weight: 700;
  }

  .inv-fc2__desc {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

  .inv-fc2__modern-right {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .inv-fc2__modern-right .inv-fc2__inline-nav {
    border-left: none;
    padding: 0;
    gap: 4px;
  }

  .inv-fc2__modern-right .inv-fc2__nav-btn {
    background: #fff;
    border: 1px solid var(--inv-fc2-border);
    color: var(--inv-fc2-dark);
    width: 40px;
    height: 40px;
  }

  .inv-fc2__modern-right .inv-fc2__nav-btn:hover {
    background: var(--inv-fc2-dark);
    border-color: var(--inv-fc2-dark);
    color: #fff;
  }

  .inv-fc2__cta--outline {
    background: transparent;
    border: 2px solid var(--inv-fc2-dark);
    color: var(--inv-fc2-dark);
    padding: 10px 20px;
    font-size: 12px;
  }

  .inv-fc2__cta--outline::before {
    display: none;
  }

  .inv-fc2__cta--outline:hover {
    background: var(--inv-fc2-dark);
    color: #fff;
  }

  /* ----------------------------------------
     GRID STYLES
     ---------------------------------------- */
  .inv-fc2__grid-wrapper {
    position: relative;
  }

  .inv-fc2__grid {
    display: grid;
    gap: var(--inv-fc2-gap);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .inv-fc2__grid--2-col { grid-template-columns: repeat(2, 1fr); }
  .inv-fc2__grid--3-col { grid-template-columns: repeat(3, 1fr); }
  .inv-fc2__grid--4-col { grid-template-columns: repeat(4, 1fr); }
  .inv-fc2__grid--5-col { grid-template-columns: repeat(5, 1fr); }
  .inv-fc2__grid--6-col { grid-template-columns: repeat(6, 1fr); }

  .inv-fc2__item {
    display: flex;
  }

  /* ----------------------------------------
     SLIDER MODE - EDGE FIX
     ---------------------------------------- */
  .inv-fc2__slider-container {
    position: relative;
    margin: 0 -20px;
    padding: 0 20px;
  }

  /* Optional fade masks at edges */
  .inv-fc2__slider-container::before,
  .inv-fc2__slider-container::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 20px;
    z-index: 2;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .inv-fc2__slider-container::before {
    left: 0;
    background: linear-gradient(90deg, var(--inv-fc2-bg), transparent);
  }

  .inv-fc2__slider-container::after {
    right: 0;
    background: linear-gradient(-90deg, var(--inv-fc2-bg), transparent);
  }

  .inv-fc2__grid--slider {
    display: flex;
    gap: var(--inv-fc2-gap);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    padding: 4px 0;
    margin: -4px 0;
  }

  .inv-fc2__grid--slider::-webkit-scrollbar {
    display: none;
  }

  .inv-fc2__slide {
    flex: 0 0 var(--inv-fc2-slide-width);
    scroll-snap-align: start;
  }

  /* Spacer at end for proper last-card visibility */
  .inv-fc2__spacer {
    flex: 0 0 1px;
    width: 1px;
    height: 1px;
  }

  /* Mobile CTA */
  .inv-fc2__mobile-cta {
    display: none;
    margin-top: 20px;
  }

  .inv-fc2__mobile-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 14px 20px;
    background: var(--inv-fc2-dark);
    color: #fff;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    text-decoration: none;
    transition: background 0.15s;
  }

  .inv-fc2__mobile-btn:hover {
    background: var(--inv-fc2-dark-hover);
  }

  .inv-fc2__mobile-btn:focus-visible {
    outline: 2px solid var(--inv-fc2-accent);
    outline-offset: 2px;
  }

  /* Placeholder */
  .inv-fc2__placeholder {
    display: flex;
    flex-direction: column;
    background: #fff;
    border: 1px solid #e5e5e5;
    overflow: hidden;
    width: 100%;
  }

  .inv-fc2__placeholder-img {
    aspect-ratio: 4/3;
    background: #fafafa;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ddd;
  }

  .inv-fc2__placeholder-body {
    padding: 12px;
  }

  .inv-fc2__placeholder-title {
    height: 14px;
    background: #eee;
    margin-bottom: 8px;
  }

  .inv-fc2__placeholder-price {
    height: 20px;
    width: 60%;
    background: #eee;
  }

  /* ----------------------------------------
     RESPONSIVE
     ---------------------------------------- */
  @media (max-width: 1024px) {
    .inv-fc2__grid--5-col,
    .inv-fc2__grid--6-col {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 768px) {
    .inv-fc2 {
      padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 0 {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .inv-fc2__header {
      margin-bottom: 16px;
    }

    .inv-fc2__bar-left {
      padding: 12px 16px 12px 20px;
    }

    .inv-fc2__title {
      font-size: 12px;
    }

    .inv-fc2__count {
      font-size: 10px;
      padding: 2px 8px;
    }

    .inv-fc2__cta {
      display: none;
    }

    .inv-fc2__modern {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .inv-fc2__badge {
      font-size: 12px;
      padding: 8px 14px;
    }

    .inv-fc2__badge-count {
      font-size: 11px;
      padding: 8px 12px;
    }

    .inv-fc2__cta--outline {
      display: none;
    }

    .inv-fc2__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }

    .inv-fc2__slider-container {
      margin: 0 -16px;
      padding: 0 16px;
    }

    .inv-fc2__grid--slider {
      gap: 10px;
    }

    .inv-fc2__slide {
      flex: 0 0 var(--inv-fc2-slide-width-mobile);
    }

    .inv-fc2__mobile-cta {
      display: block;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .inv-fc2__cta,
    .inv-fc2__cta svg,
    .inv-fc2__nav-btn,
    .inv-fc2__mobile-btn {
      transition: none;
    }
    
    .inv-fc2__grid--slider {
      scroll-behavior: auto;
    }
  }
</style>

<script>
  /**
   * Invicta Featured Collection v2.0
   * Slider navigation with theme editor support
   * @description Handles horizontal scroll with inline nav buttons
   */
  (function() {
    'use strict';
    
    const SECTION_ID = '{{ section.id }}';
    
    /**
     * Check if user prefers reduced motion
     * @returns {boolean}
     */
    function prefersReducedMotion() {
      return window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    }
    
    /**
     * Initialise slider functionality
     * @returns {void}
     */
    function initSlider() {
      const section = document.getElementById('collection-' + SECTION_ID);
      if (!section) return;
      
      const slider = section.querySelector('.inv-fc2__grid--slider');
      if (!slider) return;
      
      const prevBtn = section.querySelector('.inv-fc2__nav-btn--prev');
      const nextBtn = section.querySelector('.inv-fc2__nav-btn--next');
      
      if (!prevBtn || !nextBtn) return;
      
      const firstSlide = slider.querySelector('.inv-fc2__slide');
      if (!firstSlide) return;
      
      const gap = 12;
      const slideWidth = firstSlide.offsetWidth;
      const scrollAmount = slideWidth + gap;
      
      /**
       * Scroll the slider by a given amount
       * @param {number} amount - Pixels to scroll (negative for left)
       */
      function scrollSlider(amount) {
        const behavior = prefersReducedMotion() ? 'auto' : 'smooth';
        slider.scrollBy({ left: amount, behavior: behavior });
      }
      
      prevBtn.addEventListener('click', function() {
        scrollSlider(-scrollAmount);
      });
      
      nextBtn.addEventListener('click', function() {
        scrollSlider(scrollAmount);
      });
