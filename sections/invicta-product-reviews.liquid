{% comment %}
  ============================================================================
  INVICTA PRODUCT REVIEWS v1.0
  ============================================================================

  Product reviews section for the PDP. Displays a rating summary with
  breakdown bars, individual review cards, and supports Shopify app blocks
  so third-party review apps (Judge.me, etc.) can inject themselves.

  Features:
  - Rating summary with breakdown bars
  - Individual review cards with star ratings
  - Verified Purchase badges
  - "Write a Review" CTA
  - @app block support
  - Simple JS pagination (no dependencies)
  - Fully accessible (ARIA labels, heading hierarchy)

  Uses .inv-reviews__* prefix to avoid conflicts
  ============================================================================
{% endcomment %}

{%- liquid
  assign heading = section.settings.heading | default: 'invicta.reviews.heading' | t
  assign show_summary = section.settings.show_summary
  assign show_write_review = section.settings.show_write_review
  assign write_review_url = section.settings.write_review_url
  assign reviews_per_page = section.settings.reviews_per_page | default: 5
  assign bg_color = section.settings.background_color

  comment
    Gather review blocks and compute stats
  endcomment
  assign review_blocks = '' | split: ','
  assign total_reviews = 0
  assign rating_sum = 0
  assign star_5 = 0
  assign star_4 = 0
  assign star_3 = 0
  assign star_2 = 0
  assign star_1 = 0

  for block in section.blocks
    if block.type == 'review'
      assign total_reviews = total_reviews | plus: 1
      assign this_rating = block.settings.rating | default: 5
      assign rating_sum = rating_sum | plus: this_rating

      case this_rating
        when 5
          assign star_5 = star_5 | plus: 1
        when 4
          assign star_4 = star_4 | plus: 1
        when 3
          assign star_3 = star_3 | plus: 1
        when 2
          assign star_2 = star_2 | plus: 1
        when 1
          assign star_1 = star_1 | plus: 1
      endcase
    endif
  endfor

  if total_reviews > 0
    assign avg_rating_x10 = rating_sum | times: 10 | divided_by: total_reviews
    assign avg_whole = avg_rating_x10 | divided_by: 10
    assign avg_remainder = avg_rating_x10 | modulo: 10

    assign pct_5 = star_5 | times: 100 | divided_by: total_reviews
    assign pct_4 = star_4 | times: 100 | divided_by: total_reviews
    assign pct_3 = star_3 | times: 100 | divided_by: total_reviews
    assign pct_2 = star_2 | times: 100 | divided_by: total_reviews
    assign pct_1 = star_1 | times: 100 | divided_by: total_reviews
  else
    assign avg_whole = 0
    assign avg_remainder = 0
    assign pct_5 = 0
    assign pct_4 = 0
    assign pct_3 = 0
    assign pct_2 = 0
    assign pct_1 = 0
  endif
-%}

