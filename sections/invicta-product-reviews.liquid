{%- comment -%} ===== HTML ===== {%- endcomment -%}

<div class="inv-reviews" data-section-id="{{ section.id }}">
  <div class="inv-reviews__container">

    {%- comment -%} Section heading {%- endcomment -%}
    <h2 class="inv-reviews__heading">
      {{ heading }}
      {%- if total_reviews > 0 -%}
        <span class="inv-reviews__heading-count">({{ total_reviews }})</span>
      {%- endif -%}
    </h2>

    {%- comment -%} App block area — rendered before manual reviews {%- endcomment -%}
    {%- assign has_app_blocks = false -%}
    {%- for block in section.blocks -%}
      {%- if block.type == '@app' -%}
        {%- assign has_app_blocks = true -%}
      {%- endif -%}
    {%- endfor -%}
    {%- if has_app_blocks -%}
      <div class="inv-reviews__app-blocks">
        {%- for block in section.blocks -%}
          {%- if block.type == '@app' -%}
            {% render block %}
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if total_reviews > 0 -%}

      {%- comment -%} Rating summary {%- endcomment -%}
      {%- if show_summary -%}
        <div class="inv-reviews__summary" aria-label="{{ 'invicta.reviews.summary_label' | t | default: 'Rating summary' }}">

          {%- comment -%} Left: big number + stars {%- endcomment -%}
          <div class="inv-reviews__summary-score">
            <span class="inv-reviews__avg-number">{{ avg_whole }}.{{ avg_remainder }}</span>
            <div class="inv-reviews__avg-stars" role="img" aria-label="{{ avg_whole }}.{{ avg_remainder }} {{ 'invicta.reviews.out_of_5' | t | default: 'out of 5 stars' }}">
              {%- for i in (1..5) -%}
                {%- if i <= avg_whole -%}
                  {{ star_filled_lg }}
                {%- elsif i == avg_whole | plus: 1 and avg_remainder >= 5 -%}
                  {{ star_half_lg }}
                {%- else -%}
                  {{ star_empty_lg }}
                {%- endif -%}
              {%- endfor -%}
            </div>
            <span class="inv-reviews__total-count">
              {{ total_reviews }} {{ 'invicta.reviews.review_count' | t | default: 'reviews' }}
            </span>
          </div>

          {%- comment -%} Right: breakdown bars {%- endcomment -%}
          <div class="inv-reviews__breakdown" role="list" aria-label="{{ 'invicta.reviews.breakdown_label' | t | default: 'Rating breakdown' }}">
            {%- assign star_counts = '5,4,3,2,1' | split: ',' -%}
            {%- assign star_pcts = pct_5 | append: ',' | append: pct_4 | append: ',' | append: pct_3 | append: ',' | append: pct_2 | append: ',' | append: pct_1 | split: ',' -%}
            {%- assign star_nums = star_5 | append: ',' | append: star_4 | append: ',' | append: star_3 | append: ',' | append: star_2 | append: ',' | append: star_1 | split: ',' -%}
            {%- for star_level in star_counts -%}
              {%- assign idx = forloop.index0 -%}
              <div class="inv-reviews__breakdown-row" role="listitem">
                <span class="inv-reviews__breakdown-label">{{ star_level }} {{ 'invicta.reviews.stars' | t | default: 'stars' }}</span>
                <div class="inv-reviews__breakdown-bar" role="progressbar" aria-valuenow="{{ star_pcts[idx] }}" aria-valuemin="0" aria-valuemax="100" aria-label="{{ star_level }} {{ 'invicta.reviews.stars' | t | default: 'stars' }}: {{ star_pcts[idx] }}%">
                  <div class="inv-reviews__breakdown-fill" style="width: {{ star_pcts[idx] }}%"></div>
                </div>
                <span class="inv-reviews__breakdown-count">{{ star_nums[idx] }}</span>
              </div>
            {%- endfor -%}
          </div>

        </div>
      {%- endif -%}

      {%- comment -%} Review cards {%- endcomment -%}
      <ul class="inv-reviews__list" id="inv-reviews-list-{{ section.id }}">
        {%- assign review_index = 0 -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'review' -%}
            {%- assign review_index = review_index | plus: 1 -%}
            {%- assign this_rating = block.settings.rating | default: 5 -%}
            <li
              class="inv-reviews__card"
              {{ block.shopify_attributes }}
              {% if review_index > reviews_per_page %}hidden{% endif %}
              data-review-index="{{ review_index }}"
            >
              {%- comment -%} Stars + date row {%- endcomment -%}
              <div class="inv-reviews__card-header">
                <div class="inv-reviews__card-stars" role="img" aria-label="{{ this_rating }} {{ 'invicta.reviews.out_of_5' | t | default: 'out of 5 stars' }}">
                  {%- for i in (1..5) -%}
                    {%- if i <= this_rating -%}
                      {{ star_filled_sm }}
                    {%- else -%}
                      {{ star_empty_sm }}
                    {%- endif -%}
                  {%- endfor -%}
                </div>

                {%- if block.settings.verified -%}
                  <span class="inv-reviews__verified-badge">
                    {{ verified_icon }}
                    {{ 'invicta.reviews.verified_purchase' | t | default: 'Verified Purchase' }}
                  </span>
                {%- endif -%}
              </div>

              {%- comment -%} Title {%- endcomment -%}
              {%- if block.settings.title != blank -%}
                <h3 class="inv-reviews__card-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- comment -%} Body {%- endcomment -%}
              {%- if block.settings.body != blank -%}
                <div class="inv-reviews__card-body">{{ block.settings.body }}</div>
              {%- endif -%}

              {%- comment -%} Meta: reviewer name + date {%- endcomment -%}
              <div class="inv-reviews__card-meta">
                {%- if block.settings.reviewer_name != blank -%}
                  <span class="inv-reviews__reviewer-name">{{ block.settings.reviewer_name }}</span>
                {%- endif -%}
                {%- if block.settings.reviewer_name != blank and block.settings.date != blank -%}
                  <span class="inv-reviews__meta-sep" aria-hidden="true">&middot;</span>
                {%- endif -%}
                {%- if block.settings.date != blank -%}
                  <time class="inv-reviews__date">{{ block.settings.date }}</time>
                {%- endif -%}
              </div>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>

      {%- comment -%} Actions: Show More + Write a Review {%- endcomment -%}
      <div class="inv-reviews__actions">
        {%- if total_reviews > reviews_per_page -%}
          <button
            type="button"
            class="inv-reviews__show-more"
            id="inv-reviews-show-more-{{ section.id }}"
            aria-controls="inv-reviews-list-{{ section.id }}"
            data-per-page="{{ reviews_per_page }}"
            data-total="{{ total_reviews }}"
          >
            {{ 'invicta.reviews.show_more' | t | default: 'Show More Reviews' }}
          </button>
        {%- endif -%}

        {%- if show_write_review -%}
          <a
            href="{{ write_review_url | default: '#write-review' }}"
            class="inv-reviews__write-cta"
          >
            {{ write_icon }}
            {{ 'invicta.reviews.write_review' | t | default: 'Write a Review' }}
          </a>
        {%- endif -%}
      </div>

    {%- else -%}

      {%- comment -%} Empty state {%- endcomment -%}
      <div class="inv-reviews__empty">
        <p>{{ 'invicta.reviews.no_reviews' | t | default: 'No reviews yet. Be the first to share your experience.' }}</p>
        {%- if show_write_review -%}
          <a
            href="{{ write_review_url | default: '#write-review' }}"
            class="inv-reviews__write-cta"
          >
            {{ write_icon }}
            {{ 'invicta.reviews.write_first_review' | t | default: 'Write the First Review' }}
          </a>
        {%- endif -%}
      </div>

    {%- endif -%}

  </div>
</div>

{%- comment -%} ===== JAVASCRIPT: Simple pagination ===== {%- endcomment -%}

<script>
  (function() {
    var sectionId = {{ section.id | json }};
    var btn = document.getElementById('inv-reviews-show-more-' + sectionId);
    if (!btn) return;

    var list = document.getElementById('inv-reviews-list-' + sectionId);
    var perPage = parseInt(btn.getAttribute('data-per-page'), 10) || 5;
    var total = parseInt(btn.getAttribute('data-total'), 10) || 0;
    var shown = perPage;

    btn.addEventListener('click', function() {
      shown = shown + perPage;
      var cards = list.querySelectorAll('.inv-reviews__card');
      for (var i = 0; i < cards.length; i++) {
        var idx = parseInt(cards[i].getAttribute('data-review-index'), 10);
        if (idx <= shown) {
          cards[i].removeAttribute('hidden');
        }
      }
      if (shown >= total) {
        btn.setAttribute('hidden', '');
      }
    });
  })();
</script>

