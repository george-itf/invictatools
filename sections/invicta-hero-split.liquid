{% comment %}
  ============================================================================
  INVICTA HERO SPLIT v2.0
  Trade-style hero with bold promo cards (no floaty white boxes)
  ============================================================================
{% endcomment %}

<style>
  /* ============================================
     HERO SPLIT - MAIN STRUCTURE
     ============================================ */

  .inv-hero-split {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .inv-hero-split__container {
    max-width: var(--inv-container, 1400px);
    margin: 0 auto;
    padding: 0 var(--inv-gutter, 24px);
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
  }
  
  /* ============================================
     MAIN HERO PANEL
     ============================================ */

  .inv-hero-split__main {
    background: #2d2d2d;
    background-size: cover;
    background-position: center;
    padding: 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 280px;
    position: relative;
    overflow: hidden;
  }
  
  .inv-hero-split__content {
    max-width: 400px;
    position: relative;
    z-index: 2;
  }
  
  .inv-hero-split__badge {
    display: inline-block;
    background: #e11d26;
    color: #fff;
    padding: 6px 12px;
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 12px;
  }
  
  .inv-hero-split__heading {
    font-size: clamp(26px, 3.5vw, 36px);
    font-weight: 900;
    color: #fff;
    line-height: 1.1;
    margin: 0 0 12px 0;
    text-transform: uppercase;
    letter-spacing: -0.01em;
  }
  
  .inv-hero-split__subheading {
    font-size: 15px;
    color: rgba(255, 255, 255, 0.75);
    margin: 0 0 20px 0;
    line-height: 1.5;
  }
  
  .inv-hero-split__btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--inv-accent);
    color: #fff;
    padding: 14px 28px;
    font-size: 14px;
    font-weight: 800;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    transition: background 0.15s, gap 0.15s;
  }

  .inv-hero-split__btn:hover {
    background: var(--inv-accent-hover);
    gap: 12px;
    filter: brightness(0.9);
  }

  .inv-hero-split__btn-wrap {
    position: absolute;
    z-index: 3;
    /* top/left set via inline style from theme settings */
  }

  .inv-hero-split__btn:focus-visible {
    outline: 2px solid #fff;
    outline-offset: 2px;
  }
  
  .inv-hero-split__product-image {
    position: absolute;
    right: 24px;
    bottom: 0;
    max-width: 260px;
    max-height: 90%;
    object-fit: contain;
    z-index: 1;
  }

  /* Mobile image - hidden by default */
  .inv-hero-split__mobile-image {
    display: none;
  }

  /* ============================================
     SIDEBAR PROMO CARDS
     Matches site: sharp edges, clean #e11d26 red,
     subtle lift hover, 8px radius buttons
     ============================================ */

  .inv-hero-split__side {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  /* --- Card Base --- */
  .inv-hero-split__card {
    flex: 1;
    display: grid;
    grid-template-columns: 5px 1fr;
    grid-template-rows: 1fr auto;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .inv-hero-split__card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .inv-hero-split__card:focus-visible {
    outline: 2px solid #e11d26;
    outline-offset: 2px;
  }

  /* --- Left accent stripe --- */
  .inv-hero-split__card-stripe {
    grid-row: 1 / -1;
    grid-column: 1;
    z-index: 2;
  }

  .inv-hero-split__card--sale .inv-hero-split__card-stripe,
  .inv-hero-split__card--brand .inv-hero-split__card-stripe {
    background: #fbbf24;
  }

  .inv-hero-split__card--info .inv-hero-split__card-stripe {
    background: #e11d26;
  }

  .inv-hero-split__card--light .inv-hero-split__card-stripe,
  .inv-hero-split__card--white .inv-hero-split__card-stripe,
  .inv-hero-split__card--outline .inv-hero-split__card-stripe {
    background: #e11d26;
  }

  .inv-hero-split__card--warning .inv-hero-split__card-stripe {
    background: #1a1a1a;
  }

  .inv-hero-split__card--success .inv-hero-split__card-stripe {
    background: #fff;
  }

  /* --- Background image layer --- */
  .inv-hero-split__card-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .inv-hero-split__card-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.35s ease;
  }

  .inv-hero-split__card:hover .inv-hero-split__card-bg img {
    transform: scale(1.05);
  }

  /* --- Gradient overlay --- */
  .inv-hero-split__card-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .inv-hero-split__card--sale .inv-hero-split__card-overlay {
    background: #e11d26;
  }

  .inv-hero-split__card--brand .inv-hero-split__card-overlay {
    background: #e11d26;
  }

  .inv-hero-split__card--info .inv-hero-split__card-overlay {
    background: #1a1a1a;
  }

  .inv-hero-split__card--light .inv-hero-split__card-overlay {
    background: #f5f5f5;
  }

  .inv-hero-split__card--warning .inv-hero-split__card-overlay {
    background: #f59e0b;
  }

  .inv-hero-split__card--success .inv-hero-split__card-overlay {
    background: #16a34a;
  }

  .inv-hero-split__card--white .inv-hero-split__card-overlay {
    background: #fff;
  }

  .inv-hero-split__card--outline .inv-hero-split__card-overlay {
    background: #fff;
  }

  .inv-hero-split__card--outline {
    border: 2px solid #e5e5e5;
  }

  /* With bg image, overlay becomes semi-transparent gradient */
  .inv-hero-split__card--has-image .inv-hero-split__card-overlay {
    opacity: 0.92;
  }

  /* --- Shimmer sweep on hover --- */
  .inv-hero-split__card-shimmer {
    position: absolute;
    inset: 0;
    z-index: 5;
    pointer-events: none;
    overflow: hidden;
  }

  .inv-hero-split__card-shimmer::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -60%;
    width: 40%;
    height: 200%;
    background: linear-gradient(
      105deg,
      transparent 40%,
      rgba(255, 255, 255, 0.1) 45%,
      rgba(255, 255, 255, 0.2) 50%,
      rgba(255, 255, 255, 0.1) 55%,
      transparent 60%
    );
    transform: translateX(-100%);
    transition: none;
  }

  .inv-hero-split__card:hover .inv-hero-split__card-shimmer::after {
    animation: inv-card-shimmer 0.6s ease-out forwards;
  }

  .inv-hero-split__card--light .inv-hero-split__card-shimmer::after,
  .inv-hero-split__card--white .inv-hero-split__card-shimmer::after,
  .inv-hero-split__card--outline .inv-hero-split__card-shimmer::after {
    background: linear-gradient(
      105deg,
      transparent 40%,
      rgba(0, 0, 0, 0.02) 45%,
      rgba(0, 0, 0, 0.04) 50%,
      rgba(0, 0, 0, 0.02) 55%,
      transparent 60%
    );
  }

  @keyframes inv-card-shimmer {
    0%   { transform: translateX(-100%); }
    100% { transform: translateX(350%); }
  }

  /* --- Corner ribbon --- */
  .inv-hero-split__card-ribbon {
    position: absolute;
    top: 12px;
    right: -34px;
    z-index: 6;
    background: #fbbf24;
    color: #1a1a1a;
    font-size: 10px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 4px 40px;
    transform: rotate(45deg);
  }

  .inv-hero-split__card--info .inv-hero-split__card-ribbon {
    background: #e11d26;
    color: #fff;
  }

  /* --- Card body --- */
  .inv-hero-split__card-body {
    grid-column: 2;
    grid-row: 1;
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 20px 24px;
    gap: 10px;
  }

  /* --- Icon + Callout row --- */
  .inv-hero-split__card-top-row {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .inv-hero-split__card-icon-wrap {
    position: relative;
    width: 40px;
    height: 40px;
    flex-shrink: 0;
  }

  .inv-hero-split__card-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
    background: rgba(255, 255, 255, 0.15);
  }

  .inv-hero-split__card--light .inv-hero-split__card-icon,
  .inv-hero-split__card--white .inv-hero-split__card-icon,
  .inv-hero-split__card--outline .inv-hero-split__card-icon {
    background: #e11d26;
  }

  .inv-hero-split__card-icon svg {
    width: 20px;
    height: 20px;
    color: #fff;
  }

  /* Pulse ring on hover */
  .inv-hero-split__card-icon-wrap::after {
    content: '';
    position: absolute;
    inset: -3px;
    border-radius: 11px;
    border: 2px solid rgba(255, 255, 255, 0.25);
    z-index: 1;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .inv-hero-split__card--light .inv-hero-split__card-icon-wrap::after,
  .inv-hero-split__card--white .inv-hero-split__card-icon-wrap::after,
  .inv-hero-split__card--outline .inv-hero-split__card-icon-wrap::after {
    border-color: rgba(225, 29, 38, 0.25);
  }

  .inv-hero-split__card:hover .inv-hero-split__card-icon-wrap::after {
    opacity: 1;
    animation: inv-icon-ping 1s ease-out infinite;
  }

  @keyframes inv-icon-ping {
    0%   { inset: -3px; opacity: 0.5; }
    100% { inset: -12px; opacity: 0; }
  }

  /* --- Callout stat --- */
  .inv-hero-split__card-callout {
    font-size: clamp(18px, 2vw, 22px);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: #fff;
  }

  .inv-hero-split__card--light .inv-hero-split__card-callout,
  .inv-hero-split__card--white .inv-hero-split__card-callout,
  .inv-hero-split__card--outline .inv-hero-split__card-callout {
    color: #e11d26;
  }

  /* --- Title & subtitle --- */
  .inv-hero-split__card-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .inv-hero-split__card-content h3 {
    font-size: 14px;
    font-weight: 800;
    line-height: 1.2;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #fff;
  }

  .inv-hero-split__card-content p {
    font-size: 13px;
    font-weight: 500;
    margin: 0;
    line-height: 1.3;
    color: rgba(255, 255, 255, 0.7);
  }

  .inv-hero-split__card--light .inv-hero-split__card-content h3,
  .inv-hero-split__card--white .inv-hero-split__card-content h3,
  .inv-hero-split__card--outline .inv-hero-split__card-content h3 {
    color: #1a1a1a;
  }

  .inv-hero-split__card--light .inv-hero-split__card-content p,
  .inv-hero-split__card--white .inv-hero-split__card-content p,
  .inv-hero-split__card--outline .inv-hero-split__card-content p {
    color: #666;
  }

  /* --- CTA button (matches site button style) --- */
  .inv-hero-split__card-cta {
    grid-column: 2;
    grid-row: 2;
    position: relative;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 20px;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #fff;
    background: rgba(0, 0, 0, 0.2);
    transition: background 0.2s ease, gap 0.15s ease;
  }

  .inv-hero-split__card:hover .inv-hero-split__card-cta {
    background: rgba(0, 0, 0, 0.35);
    gap: 12px;
  }

  .inv-hero-split__card-cta svg {
    width: 14px;
    height: 14px;
    transition: transform 0.15s ease;
  }

  .inv-hero-split__card:hover .inv-hero-split__card-cta svg {
    transform: translateX(3px);
  }

  /* Light card CTA: red button */
  .inv-hero-split__card--light .inv-hero-split__card-cta,
  .inv-hero-split__card--white .inv-hero-split__card-cta,
  .inv-hero-split__card--outline .inv-hero-split__card-cta {
    color: #fff;
    background: #e11d26;
  }

  .inv-hero-split__card--light:hover .inv-hero-split__card-cta,
  .inv-hero-split__card--white:hover .inv-hero-split__card-cta,
  .inv-hero-split__card--outline:hover .inv-hero-split__card-cta {
    background: #c81a22;
  }

  .inv-hero-split__card--warning .inv-hero-split__card-cta {
    color: #1a1a1a;
    background: rgba(0, 0, 0, 0.1);
  }

  .inv-hero-split__card--warning:hover .inv-hero-split__card-cta {
    background: rgba(0, 0, 0, 0.18);
  }

  /* ============================================
     RESPONSIVE
     ============================================ */
  
  @media (max-width: 989px) {
    .inv-hero-split__container {
      grid-template-columns: 1fr;
    }

    .inv-hero-split__side {
      flex-direction: row;
    }

    .inv-hero-split__card {
      flex: 1;
    }

    .inv-hero-split__product-image {
      max-width: 180px;
    }
  }
  
  @media (max-width: 749px) {
    .inv-hero-split__main {
      display: flex;
      flex-direction: column;
      text-align: center;
      padding: 0;
      min-height: auto;
      overflow: visible;
      background-image: none !important;
      background: #2d2d2d;
    }

    .inv-hero-split__mobile-image {
      display: block !important;
      width: 100%;
      height: auto;
    }

    .inv-hero-split__content {
      display: block;
      max-width: 100%;
      padding: 24px 20px;
      text-align: center;
    }

    .inv-hero-split__btn-wrap {
      position: static;
      text-align: center;
      padding: 0 20px 24px;
    }

    .inv-hero-split__heading {
      font-size: 22px;
    }

    .inv-hero-split__subheading {
      font-size: 14px;
    }

    .inv-hero-split__product-image {
      display: none;
      content-visibility: hidden;
      contain-intrinsic-size: 0;
    }

    .inv-hero-split__side {
      flex-direction: column;
    }

    .inv-hero-split__card {
      min-height: auto;
    }

    .inv-hero-split__card-body {
      padding: 14px 16px;
      gap: 6px;
    }

    .inv-hero-split__card-top-row {
      gap: 10px;
    }

    .inv-hero-split__card-icon-wrap {
      width: 32px;
      height: 32px;
    }

    .inv-hero-split__card-icon {
      width: 32px;
      height: 32px;
      border-radius: 6px;
    }

    .inv-hero-split__card-icon svg {
      width: 16px;
      height: 16px;
    }

    .inv-hero-split__card-callout {
      font-size: 16px;
    }

    .inv-hero-split__card-content h3 {
      font-size: 12px;
    }

    .inv-hero-split__card-content p {
      font-size: 11px;
    }

    .inv-hero-split__card-cta {
      padding: 10px 16px;
      font-size: 11px;
    }

    .inv-hero-split__card-ribbon {
      top: 8px;
      right: -36px;
      font-size: 9px;
      padding: 3px 40px;
    }

    .inv-hero-split__card-bg img {
      display: none;
    }

    .inv-hero-split__card-shimmer {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .inv-hero-split__btn,
    .inv-hero-split__card,
    .inv-hero-split__card-cta,
    .inv-hero-split__card-cta svg,
    .inv-hero-split__card-bg img {
      transition: none;
    }

    .inv-hero-split__card:hover {
      transform: none;
    }

    .inv-hero-split__card:hover .inv-hero-split__card-shimmer::after {
      animation: none;
    }

    .inv-hero-split__card:hover .inv-hero-split__card-icon-wrap::after {
      animation: none;
    }

    .inv-hero-split__card:hover .inv-hero-split__card-bg img {
      transform: none;
    }
  }
</style>

<section class="inv-hero-split">
  <div class="inv-hero-split__container">
    
    {%- comment -%} MAIN HERO PANEL {%- endcomment -%}
    <div 
      class="inv-hero-split__main" 
      {% if section.settings.main_image %}style="background-image: url('{{ section.settings.main_image | image_url: width: 1200 }}');"{% endif %}
    >
      {%- if section.settings.main_image -%}
        <img
          src="{{ section.settings.main_image | image_url: width: 800 }}"
          srcset="{{ section.settings.main_image | image_url: width: 400 }} 400w,
                  {{ section.settings.main_image | image_url: width: 600 }} 600w,
                  {{ section.settings.main_image | image_url: width: 800 }} 800w"
          sizes="(max-width: 749px) 100vw, 800px"
          alt="{{ section.settings.heading | default: 'Hero image' | escape }}"
          class="inv-hero-split__mobile-image"
          loading="eager"
          fetchpriority="high"
          width="{{ section.settings.main_image.width }}"
          height="{{ section.settings.main_image.height }}"
        >
      {%- endif -%}

      <div class="inv-hero-split__content">
        {%- if section.settings.badge_text != blank -%}
          <span class="inv-hero-split__badge">{{ section.settings.badge_text }}</span>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h1 class="inv-hero-split__heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        
        {%- if section.settings.subheading != blank -%}
          <p class="inv-hero-split__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        
      </div>

      {%- if section.settings.button_text != blank -%}
        <div class="inv-hero-split__btn-wrap" style="top: {{ section.settings.button_position_y }}%; left: {{ section.settings.button_position_x }}%;">
          <a href="{{ section.settings.button_link }}" class="inv-hero-split__btn" style="font-size: {{ section.settings.button_font_size }}px; padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;{% if section.settings.button_bg_color != blank %} background: {{ section.settings.button_bg_color }};{% endif %}{% if section.settings.button_text_color != blank %} color: {{ section.settings.button_text_color }};{% endif %}">
            {{ section.settings.button_text }}
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      {%- endif -%}
      
      {%- if section.settings.hero_product_image -%}
        {%- comment -%}
          PERF: This image is hidden on mobile (display:none at ≤749px).
          Use loading="lazy" so mobile browsers skip the download entirely.
          Desktop still loads it promptly since it's in the viewport.
        {%- endcomment -%}
        <img
          src="{{ section.settings.hero_product_image | image_url: width: 500 }}"
          alt="{{ section.settings.heading | escape }}"
          class="inv-hero-split__product-image"
          loading="lazy"
          width="{{ section.settings.hero_product_image.width }}"
          height="{{ section.settings.hero_product_image.height }}"
        >
      {%- endif -%}
    </div>
    
    {%- comment -%} SIDEBAR PROMO CARDS — Bold Trade Banners {%- endcomment -%}
    <div class="inv-hero-split__side">
      {%- for block in section.blocks -%}
        {%- if block.type == 'promo_card' -%}
          {%- assign has_image = false -%}
          {%- if block.settings.card_image != blank -%}
            {%- assign has_image = true -%}
          {%- endif -%}

          <a
            href="{{ block.settings.link }}"
            class="inv-hero-split__card inv-hero-split__card--{{ block.settings.style }}{% if has_image %} inv-hero-split__card--has-image{% endif %}"
            {{ block.shopify_attributes }}
            aria-label="{{ block.settings.title | escape }}"
          >

            {%- comment -%} Background image layer {%- endcomment -%}
            {%- if has_image -%}
              <div class="inv-hero-split__card-bg">
                <img
                  src="{{ block.settings.card_image | image_url: width: 600 }}"
                  alt=""
                  loading="lazy"
                  width="{{ block.settings.card_image.width }}"
                  height="{{ block.settings.card_image.height }}"
                >
              </div>
            {%- endif -%}

            {%- comment -%} Gradient overlay {%- endcomment -%}
            <div class="inv-hero-split__card-overlay"></div>

            {%- comment -%} Shimmer sweep {%- endcomment -%}
            <div class="inv-hero-split__card-shimmer"></div>

            {%- comment -%} Bold left accent stripe {%- endcomment -%}
            <div class="inv-hero-split__card-stripe"></div>

            {%- comment -%} Corner ribbon {%- endcomment -%}
            {%- if block.settings.ribbon_text != blank -%}
              <span class="inv-hero-split__card-ribbon">{{ block.settings.ribbon_text }}</span>
            {%- endif -%}

            {%- comment -%} Card body {%- endcomment -%}
            <div class="inv-hero-split__card-body">

              {%- comment -%} Icon + Callout row {%- endcomment -%}
              <div class="inv-hero-split__card-top-row">
                <div class="inv-hero-split__card-icon-wrap">
                  <div
                    class="inv-hero-split__card-icon"
                    {% if block.settings.custom_icon_bg != blank %}style="background: {{ block.settings.custom_icon_bg }};"{% endif %}
                  >
                    {%- assign icon_style = '' -%}
                    {%- if block.settings.custom_icon_color != blank -%}
                      {%- assign icon_style = 'style="color: ' | append: block.settings.custom_icon_color | append: ';"' -%}
                    {%- endif -%}
                    {%- case block.settings.icon -%}
                      {%- when 'tag' -%}
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true" {{ icon_style }}>
