{% comment %}
  ============================================
  INVICTA 404 PAGE v1.0
  ============================================
  Professional 404 page with:
  - Search bar for quick recovery
  - Popular category links
  - Contact/help section
  - Continue shopping CTA

  Trade 15.4.0 Compatible
  ============================================
{% endcomment %}

<style>
  .inv-404 {
    padding: 3rem 0 4rem;
    text-align: center;
  }
  .inv-404__code {
    font-size: clamp(4rem, 12vw, 8rem);
    font-weight: 800;
    line-height: 1;
    color: var(--color-foreground);
    opacity: 0.08;
    margin: 0;
    letter-spacing: -0.04em;
  }
  .inv-404__title {
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    margin: -1.5rem 0 0.75rem;
    color: var(--color-foreground);
  }
  .inv-404__description {
    color: var(--color-foreground);
    opacity: 0.7;
    max-width: 42ch;
    margin: 0 auto 2rem;
    font-size: 1rem;
    line-height: 1.6;
  }

  /* Search */
  .inv-404__search {
    max-width: 480px;
    margin: 0 auto 3rem;
  }
  .inv-404__search-form {
    display: flex;
    gap: 0;
    border: 2px solid var(--color-foreground);
    border-radius: var(--inputs-radius, 4px);
    overflow: hidden;
    transition: border-color 0.2s;
  }
  .inv-404__search-form:focus-within {
    border-color: var(--color-button);
  }
  .inv-404__search-input {
    flex: 1;
    border: none;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    background: transparent;
    color: var(--color-foreground);
    outline: none;
    font-family: inherit;
  }
  .inv-404__search-input::placeholder {
    color: var(--color-foreground);
    opacity: 0.45;
  }
  .inv-404__search-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-button, #e11d26);
    color: var(--color-button-text, #fff);
    border: none;
    padding: 0.875rem 1.25rem;
    cursor: pointer;
    transition: opacity 0.2s;
  }
  .inv-404__search-btn:hover {
    opacity: 0.9;
  }
  .inv-404__search-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Categories grid */
  .inv-404__categories {
    margin-bottom: 3rem;
  }
  .inv-404__section-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .inv-404__cat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.75rem;
    max-width: 700px;
    margin: 0 auto;
  }
  .inv-404__cat-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    background: var(--color-background);
    border: 1px solid var(--color-foreground);
    border-radius: var(--buttons-radius, 4px);
    color: var(--color-foreground);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: background-color 0.2s, color 0.2s;
    border-opacity: 0.15;
  }
  .inv-404__cat-link:hover {
    background: var(--color-button, #e11d26);
    color: var(--color-button-text, #fff);
    border-color: transparent;
  }
  .inv-404__cat-link svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  /* Help section */
  .inv-404__help {
    background: rgba(0, 0, 0, 0.03);
    border-radius: var(--buttons-radius, 4px);
    padding: 2rem;
    max-width: 580px;
    margin: 0 auto 2.5rem;
  }
  .inv-404__help-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--color-foreground);
  }
  .inv-404__help-text {
    color: var(--color-foreground);
    opacity: 0.7;
    margin: 0 0 1.25rem;
    font-size: 0.9375rem;
  }
  .inv-404__help-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .inv-404__help-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1.25rem;
    border: 1px solid var(--color-foreground);
    border-radius: var(--buttons-radius, 4px);
    color: var(--color-foreground);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: background-color 0.2s, color 0.2s;
  }
  .inv-404__help-link:hover {
    background: var(--color-foreground);
    color: var(--color-background);
  }
  .inv-404__help-link svg {
    width: 16px;
    height: 16px;
  }

  /* Browse all CTA */
  .inv-404__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    background: var(--color-button, #e11d26);
    color: var(--color-button-text, #fff);
    border: none;
    border-radius: var(--buttons-radius, 4px);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    transition: opacity 0.2s;
  }
  .inv-404__cta:hover {
    opacity: 0.9;
  }
  .inv-404__cta svg {
    width: 18px;
    height: 18px;
  }

  @media screen and (max-width: 749px) {
    .inv-404 {
      padding: 2rem 0 3rem;
    }
    .inv-404__cat-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .inv-404__help {
      padding: 1.5rem;
    }
  }
</style>

<div class="inv-404 page-width page-margin">

  {%- comment -%} Hero: Code + Title + Description {%- endcomment -%}
  <p class="inv-404__code" aria-hidden="true">{{ 'templates.404.subtext' | t }}</p>
  <h1 class="inv-404__title">{{ 'templates.404.title' | t }}</h1>
  <p class="inv-404__description">{{ 'templates.404.description' | t }}</p>

  {%- comment -%} Search Bar {%- endcomment -%}
  <div class="inv-404__search">
    <form action="{{ routes.search_url }}" method="get" class="inv-404__search-form" role="search">
      <input type="hidden" name="type" value="product">
      <input
        type="search"
        name="q"
        class="inv-404__search-input"
        placeholder="{{ 'templates.404.search_placeholder' | t }}"
        aria-label="{{ 'general.search.search' | t }}"
      >
      <button type="submit" class="inv-404__search-btn" aria-label="{{ 'templates.404.search_button' | t }}">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>
        </svg>
      </button>
    </form>
  </div>

  {%- comment -%} Popular Categories {%- endcomment -%}
  {%- if section.blocks.size > 0 -%}
    <div class="inv-404__categories">
      <h2 class="inv-404__section-title">{{ 'templates.404.popular_categories' | t }}</h2>
      <div class="inv-404__cat-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'category' -%}
            {%- assign cat_collection = block.settings.collection -%}
            {%- if cat_collection != blank -%}
              <a href="{{ cat_collection.url }}" class="inv-404__cat-link" {{ block.shopify_attributes }}>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
                {{ cat_collection.title }}
              </a>
            {%- elsif block.settings.title != blank -%}
              <a href="{{ block.settings.url | default: routes.all_products_collection_url }}" class="inv-404__cat-link" {{ block.shopify_attributes }}>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
                {{ block.settings.title }}
              </a>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}

  {%- comment -%} Need Help? {%- endcomment -%}
  {%- if section.settings.show_help_section -%}
    <div class="inv-404__help">
      <h2 class="inv-404__help-title">{{ 'templates.404.need_help' | t }}</h2>
      <p class="inv-404__help-text">{{ 'templates.404.need_help_text' | t }}</p>
      <div class="inv-404__help-actions">
        {%- if section.settings.contact_url != blank -%}
          <a href="{{ section.settings.contact_url }}" class="inv-404__help-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>
            </svg>
            {{ 'templates.404.contact_us' | t }}
          </a>
        {%- endif -%}
        {%- if section.settings.phone_number != blank -%}
          <a href="tel:{{ section.settings.phone_number | remove: ' ' }}" class="inv-404__help-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            {{ 'templates.404.call_us' | t }}: {{ section.settings.phone_number }}
          </a>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}

  {%- comment -%} Browse All CTA {%- endcomment -%}
  <a href="{{ routes.all_products_collection_url }}" class="inv-404__cta">
    {{ 'templates.404.browse_all' | t }}
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
    </svg>
  </a>

</div>

{% schema %}
{
  "name": "404 page",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_help_section",
      "label": "Show help section",
      "default": true
    },
    {
      "type": "url",
      "id": "contact_url",
      "label": "Contact page URL",
      "default": "/pages/contact"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone number",
      "default": "01227 456789"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category link",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom title",
          "info": "Only used if no collection is selected"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Custom URL",
          "info": "Only used if no collection is selected"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "404 page",
      "blocks": [
        { "type": "category", "settings": { "title": "Power Tools" } },
        { "type": "category", "settings": { "title": "Hand Tools" } },
        { "type": "category", "settings": { "title": "Fixings & Fasteners" } },
        { "type": "category", "settings": { "title": "Abrasives" } },
        { "type": "category", "settings": { "title": "Ironmongery" } },
        { "type": "category", "settings": { "title": "Workwear & PPE" } }
      ]
    }
  ]
}
{% endschema %}
