{% comment %}
  ============================================
  BRAND NEW PRODUCTS v1.0
  ============================================
  Two-column feature cards for new product launches
  White background with accent NEW badges
  Trade 15.4.0 Compatible
  ============================================
{% endcomment %}

{{ 'brand-page.css' | asset_url | stylesheet_tag }}

<section class="brand-new-products" id="new-products-{{ section.id }}">
  <div class="page-width">

    {%- comment -%} Section Header {%- endcomment -%}
    <div class="brand-new-products__header">
      {%- if section.settings.section_label != blank -%}
        <span class="brand-new-products__label">
          <span class="brand-new-products__label-dash"></span>
          {{ section.settings.section_label }}
        </span>
      {%- endif -%}
      {%- if section.settings.title != blank -%}
        <h2 class="brand-new-products__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <p class="brand-new-products__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    {%- comment -%} Product Cards Grid {%- endcomment -%}
    <div class="brand-new-products__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'product_feature' -%}
          <div class="brand-new-products__card" {{ block.shopify_attributes }}>

            {%- comment -%} Image Column {%- endcomment -%}
            <div class="brand-new-products__card-image">
              {%- if block.settings.image != blank -%}
                <img
  src="{{ block.settings.image | image_url: width: 500 }}"
  srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
          {{ block.settings.image | image_url: width: 400 }} 400w,
          {{ block.settings.image | image_url: width: 500 }} 500w"
  sizes="(max-width: 749px) 100vw, 33vw"
  alt="{{ block.settings.image.alt | default: block.settings.title }}"
  loading="lazy"
  width="500"
  height="375"
  class="brand-categories__img"
>
              {%- else -%}
                <div class="brand-new-products__placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" aria-hidden="true">
                    <rect x="3" y="3" width="18" height="18" rx="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21 15 16 10 5 21"/>
                  </svg>
                </div>
              {%- endif -%}

              {%- comment -%} NEW Badge {%- endcomment -%}
              {%- if block.settings.show_badge -%}
                <span class="brand-new-products__badge">
                  {{ block.settings.badge_text | default: 'NEW' }}
                </span>
              {%- endif -%}
            </div>

            {%- comment -%} Content Column {%- endcomment -%}
            <div class="brand-new-products__card-content">

              {%- comment -%} Launch Date {%- endcomment -%}
              {%- if block.settings.launch_date != blank -%}
                <span class="brand-new-products__launch-date">{{ block.settings.launch_date }}</span>
              {%- endif -%}

              {%- comment -%} Title {%- endcomment -%}
              {%- if block.settings.title != blank -%}
                <h3 class="brand-new-products__card-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- comment -%} Description {%- endcomment -%}
              {%- if block.settings.description != blank -%}
                <p class="brand-new-products__card-desc">{{ block.settings.description }}</p>
              {%- endif -%}

              {%- comment -%} Feature List {%- endcomment -%}
              <ul class="brand-new-products__features">
                {%- if block.settings.feature_1 != blank -%}
                  <li class="brand-new-products__feature">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    <span>{{ block.settings.feature_1 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.feature_2 != blank -%}
                  <li class="brand-new-products__feature">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    <span>{{ block.settings.feature_2 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.feature_3 != blank -%}
                  <li class="brand-new-products__feature">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    <span>{{ block.settings.feature_3 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.feature_4 != blank -%}
                  <li class="brand-new-products__feature">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    <span>{{ block.settings.feature_4 }}</span>
                  </li>
                {%- endif -%}
              </ul>

              {%- comment -%} CTA Button {%- endcomment -%}
              {%- if block.settings.cta_text != blank and block.settings.cta_url != blank -%}
                <a href="{{ block.settings.cta_url }}" class="brand-new-products__btn">
                  {{ block.settings.cta_text }}
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </a>
              {%- endif -%}

            </div>

          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

  </div>
</section>

