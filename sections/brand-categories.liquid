{% comment %}
  ============================================
  BRAND CATEGORIES v1.0
  ============================================
  Three-column category cards grid
  White background with hover effects
  Trade 15.4.0 Compatible
  ============================================
{% endcomment %}

{{ 'brand-page.css' | asset_url | stylesheet_tag }}

<section class="brand-categories" id="categories">
  <div class="page-width">

    {%- comment -%} Section Header {%- endcomment -%}
    <div class="brand-categories__header">
      {%- if section.settings.section_label != blank -%}
        <span class="brand-categories__label">
          <span class="brand-categories__label-dash"></span>
          {{ section.settings.section_label }}
        </span>
      {%- endif -%}
      {%- if section.settings.title != blank -%}
        <h2 class="brand-categories__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <p class="brand-categories__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    {%- comment -%} Category Cards Grid {%- endcomment -%}
    <div class="brand-categories__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'category' -%}
          <a href="{{ block.settings.url | default: '#' }}" class="brand-categories__card" {{ block.shopify_attributes }}>

            {%- comment -%} Image Container {%- endcomment -%}
            <div class="brand-categories__card-image">
              {%- if block.settings.image != blank -%}
                <img
  src="{{ block.settings.image | image_url: width: 500 }}"
  srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
          {{ block.settings.image | image_url: width: 400 }} 400w,
          {{ block.settings.image | image_url: width: 500 }} 500w"
  sizes="(max-width: 749px) 100vw, 33vw"
  alt="{{ block.settings.image.alt | default: block.settings.title }}"
  loading="lazy"
  width="500"
  height="375"
  class="brand-categories__img"
>
              {%- else -%}
                <div class="brand-categories__placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" aria-hidden="true">
                    <rect x="3" y="3" width="18" height="18" rx="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21 15 16 10 5 21"/>
                  </svg>
                </div>
              {%- endif -%}
            </div>

            {%- comment -%} Card Content {%- endcomment -%}
            <div class="brand-categories__card-content">
              {%- if block.settings.title != blank -%}
                <h3 class="brand-categories__card-title">{{ block.settings.title }}</h3>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <p class="brand-categories__card-desc">{{ block.settings.description }}</p>
              {%- endif -%}
              <span class="brand-categories__card-link">
                Shop Now
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </span>
            </div>

          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Brand Categories",
  "tag": "section",
  "class": "section-brand-categories",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "section_label",
      "label": "Section Label",
      "default": "Shop By Category"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Explore Lamello Products"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "From precision biscuit joiners to innovative connector systems"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category Name"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Brief description of this category."
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Categories",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Biscuit Joiners",
            "description": "The original and best. Zeta, Classic, and Top models for cabinet making and joinery."
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Connector Systems",
            "description": "Clamex, Tenso, Invis Mx, Cabineo. Detachable and invisible connectors for furniture."
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Biscuits & Accessories",
            "description": "Original Lamello biscuits, blades, dust bags, and genuine spare parts."
          }
        }
      ]
    }
  ]
}
{% endschema %}
