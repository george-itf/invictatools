{% comment %}
  ============================================
  INVICTA TRUST BAR v1.0
  ============================================
  Bold, industrial trust section for trade suppliers
  Stats + proof points, not fluffy marketing waffle
  
  Trade 15.4.0 Compatible
  ============================================
{% endcomment %}

<section class="inv-trust" id="trust-{{ section.id }}">
  
  {%- comment -%} Stats bar {%- endcomment -%}
  <div class="inv-trust__stats">
    <div class="inv-container">
      <div class="inv-trust__stats-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'stat' -%}
            <div class="inv-trust__stat" {{ block.shopify_attributes }}>
              <span class="inv-trust__stat-number">{{ block.settings.number }}</span>
              <span class="inv-trust__stat-label">{{ block.settings.label }}</span>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  
  {%- comment -%} Main content {%- endcomment -%}
  <div class="inv-trust__main">
    <div class="inv-container">
      <div class="inv-trust__grid">
        
        {%- comment -%} Left: Image/brand block {%- endcomment -%}
        <div class="inv-trust__media">
          {%- if section.settings.image != blank -%}
            <img 
              src="{{ section.settings.image | image_url: width: 800 }}"
              srcset="{{ section.settings.image | image_url: width: 400 }} 400w,
                      {{ section.settings.image | image_url: width: 600 }} 600w,
                      {{ section.settings.image | image_url: width: 800 }} 800w"
              sizes="(max-width: 749px) 100vw, 50vw"
              alt="{{ section.settings.image.alt | default: 'Invicta Tools' }}"
              loading="lazy"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              class="inv-trust__image"
            >
          {%- else -%}
            <div class="inv-trust__image-placeholder">
              <div class="inv-trust__placeholder-content">
                <span class="inv-trust__placeholder-brand">INVICTA</span>
                <span class="inv-trust__placeholder-sub">TOOLS</span>
              </div>
            </div>
          {%- endif -%}
          
          {%- if section.settings.badge_text != blank -%}
            <div class="inv-trust__badge">
              {{ section.settings.badge_text }}
            </div>
          {%- endif -%}
        </div>
        
        {%- comment -%} Right: Content {%- endcomment -%}
        <div class="inv-trust__content">
          
          {%- if section.settings.eyebrow != blank -%}
            <span class="inv-trust__eyebrow">{{ section.settings.eyebrow }}</span>
          {%- endif -%}
          
          {%- if section.settings.heading != blank -%}
            <h2 class="inv-trust__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
          
          {%- if section.settings.text != blank -%}
            <div class="inv-trust__text">{{ section.settings.text }}</div>
          {%- endif -%}
          
          {%- comment -%} Proof points {%- endcomment -%}
          <ul class="inv-trust__points">
            {%- for block in section.blocks -%}
              {%- if block.type == 'point' and block.settings.text != blank -%}
                <li class="inv-trust__point" {{ block.shopify_attributes }}>
                  <svg class="inv-trust__point-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{{ block.settings.text }}</span>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
          
          {%- comment -%} Mini Review Carousel {%- endcomment -%}
          {%- assign review_blocks = section.blocks | where: 'type', 'review' -%}
          {%- if review_blocks.size > 0 -%}
            <div class="inv-trust__reviews" data-trust-reviews>
              <div class="inv-trust__reviews-track" data-trust-reviews-track>
                {%- for block in review_blocks -%}
                  <div class="inv-trust__review{% if forloop.first %} inv-trust__review--active{% endif %}" data-trust-review="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                    <div class="inv-trust__review-stars" role="img" aria-label="{{ block.settings.rating }} out of 5 stars">
                      {%- for i in (1..5) -%}
                        <svg width="16" height="16" viewBox="0 0 24 24" aria-hidden="true"{% if i > block.settings.rating %} class="inv-trust__star--empty"{% endif %}>
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                      {%- endfor -%}
                    </div>
                    <p class="inv-trust__review-text">"{{ block.settings.text }}"</p>
                    <div class="inv-trust__review-author">
                      {%- if block.settings.avatar != blank -%}
                        <img
                          src="{{ block.settings.avatar | image_url: width: 64 }}"
                          alt="{{ block.settings.author | escape }}"
                          width="28"
                          height="28"
                          loading="lazy"
                          class="inv-trust__review-avatar"
                        >
                      {%- endif -%}
                      <span class="inv-trust__review-name">{{ block.settings.author }}</span>
                    </div>
                  </div>
                {%- endfor -%}
              </div>
              {%- if review_blocks.size > 1 -%}
                <div class="inv-trust__reviews-dots" role="tablist" aria-label="Review navigation">
                  {%- for block in review_blocks -%}
                    <button
                      type="button"
                      class="inv-trust__reviews-dot{% if forloop.first %} inv-trust__reviews-dot--active{% endif %}"
                      data-trust-dot="{{ forloop.index0 }}"
                      role="tab"
                      aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                      aria-label="Review {{ forloop.index }}"
                    ></button>
                  {%- endfor -%}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%} CTA {%- endcomment -%}
          {%- if section.settings.cta_text != blank and section.settings.cta_link != blank -%}
            <div class="inv-trust__cta-wrap">
              <a href="{{ section.settings.cta_link }}" class="inv-trust__cta">
                {{ section.settings.cta_text }}
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          {%- endif -%}

        </div>
        
      </div>
    </div>
  </div>
  
</section>

<style>
  /* ============================================
     INVICTA TRUST BAR v1.0
     Industrial, bold, no-nonsense
     ============================================ */

  #trust-{{ section.id }} {
    --inv-trust-accent: var(--inv-brand);
    --inv-trust-dark: var(--inv-dark);
    --inv-trust-grey: var(--inv-dark);
  }

  .inv-trust {
    background: #fff;
  }

  /* ----------------------------------------
     STATS BAR
     ---------------------------------------- */
  .inv-trust__stats {
    background: var(--inv-trust-dark);
    padding: 0;
  }

  .inv-trust__stats-grid {
    display: grid;
    grid-template-columns: repeat({{ section.blocks | where: 'type', 'stat' | size }}, 1fr);
  }

  .inv-trust__stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 28px 20px;
    text-align: center;
    position: relative;
  }

  .inv-trust__stat:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 50%;
    background: rgba(255, 255, 255, 0.15);
  }

  .inv-trust__stat-number {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 900;
    color: #fff;
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .inv-trust__stat-label {
    font-size: 12px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 6px;
  }

  /* ----------------------------------------
     MAIN CONTENT
     ---------------------------------------- */
  .inv-trust__main {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .inv-trust__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  /* Media side */
  .inv-trust__media {
    position: relative;
  }

  .inv-trust__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .inv-trust__image-placeholder {
    aspect-ratio: 4/3;
    background: var(--inv-trust-grey);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .inv-trust__placeholder-content {
    text-align: center;
  }

  .inv-trust__placeholder-brand {
    display: block;
    font-size: 48px;
    font-weight: 900;
    color: #fff;
    letter-spacing: 0.1em;
    line-height: 1;
  }

  .inv-trust__placeholder-sub {
    display: block;
    font-size: 18px;
    font-weight: 700;
    color: var(--inv-trust-accent);
    letter-spacing: 0.3em;
    margin-top: 4px;
  }

  .inv-trust__badge {
    position: absolute;
    bottom: -16px;
    left: 24px;
    background: var(--inv-trust-accent);
    color: #fff;
    padding: 12px 20px;
    font-size: 13px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Content side */
  .inv-trust__content {
    padding: 20px 0;
  }

  .inv-trust__eyebrow {
    display: inline-block;
    font-size: 12px;
    font-weight: 700;
    color: var(--inv-trust-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 12px;
  }

  .inv-trust__heading {
    font-size: clamp(28px, 4vw, 40px);
    font-weight: 900;
    color: var(--inv-trust-dark);
    line-height: 1.1;
    margin: 0 0 20px;
  }

  .inv-trust__text {
    font-size: 16px;
    color: #555;
    line-height: 1.6;
    margin-bottom: 28px;
  }

  .inv-trust__text p {
    margin: 0 0 12px;
  }

  .inv-trust__text p:last-child {
    margin-bottom: 0;
  }

  /* Proof points */
  .inv-trust__points {
    list-style: none;
    margin: 0 0 32px;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .inv-trust__point {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 15px;
    font-weight: 600;
    color: var(--inv-trust-dark);
    line-height: 1.4;
  }

  .inv-trust__point-icon {
    flex-shrink: 0;
    color: var(--inv-trust-accent);
    margin-top: 2px;
  }

  /* CTA */
  .inv-trust__cta-wrap {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .inv-trust__cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    background: var(--inv-trust-dark);
    color: #fff;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    text-decoration: none;
    transition: background 0.2s, gap 0.2s;
  }

  .inv-trust__cta:hover {
    background: var(--inv-trust-grey);
    gap: 14px;
  }

  .inv-trust__cta:focus-visible {
    outline: 2px solid var(--inv-trust-accent);
    outline-offset: 2px;
  }

  .inv-trust__cta svg {
    transition: transform 0.2s;
  }

  .inv-trust__cta:hover svg {
    transform: translateX(3px);
  }

  /* ----------------------------------------
     MINI REVIEW CAROUSEL
     ---------------------------------------- */
  .inv-trust__reviews {
    margin-top: 24px;
    position: relative;
    overflow: hidden;
  }

  .inv-trust__reviews-track {
    position: relative;
    min-height: 100px;
  }

  .inv-trust__review {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transform: translateX(12px);
    transition: opacity 0.4s ease, transform 0.4s ease;
    pointer-events: none;
  }

  .inv-trust__review--active {
    position: relative;
    opacity: 1;
    transform: translateX(0);
    pointer-events: auto;
  }

  .inv-trust__review-stars {
    display: flex;
    gap: 2px;
    margin-bottom: 8px;
  }

  .inv-trust__review-stars svg {
    fill: #f59e0b;
  }

  .inv-trust__star--empty {
    fill: #d1d5db !important;
  }

  .inv-trust__review-text {
    font-size: 14px;
    font-style: italic;
    color: #444;
    line-height: 1.5;
    margin: 0 0 10px;
  }

  .inv-trust__review-author {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .inv-trust__review-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    object-fit: cover;
  }

  .inv-trust__review-name {
    font-size: 13px;
    font-weight: 600;
    color: var(--inv-trust-dark);
  }

  .inv-trust__reviews-dots {
    display: flex;
    gap: 6px;
    margin-top: 12px;
  }

  .inv-trust__reviews-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: none;
    padding: 0;
    background: #d1d5db;
    cursor: pointer;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .inv-trust__reviews-dot--active {
    background: var(--inv-trust-accent);
    transform: scale(1.25);
  }

  .inv-trust__reviews-dot:focus-visible {
    outline: 2px solid var(--inv-trust-accent);
    outline-offset: 2px;
  }

  /* ----------------------------------------
     RESPONSIVE
     ---------------------------------------- */
  @media (max-width: 989px) {
    .inv-trust__grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .inv-trust__media {
      order: -1;
    }

    .inv-trust__badge {
      bottom: -12px;
      left: 16px;
      padding: 10px 16px;
      font-size: 12px;
    }
  }

  @media (max-width: 749px) {
    .inv-trust__stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .inv-trust__stat {
      padding: 20px 16px;
    }

    .inv-trust__stat:nth-child(2)::after {
      display: none;
    }

    .inv-trust__stat:nth-child(3),
    .inv-trust__stat:nth-child(4) {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .inv-trust__stat-number {
      font-size: 32px;
    }

    .inv-trust__stat-label {
      font-size: 10px;
    }

    .inv-trust__main {
      padding: {{ section.settings.padding_top | times: 0.7 | round: 0 }}px 0 {{ section.settings.padding_bottom | times: 0.7 | round: 0 }}px;
    }

    .inv-trust__heading {
      font-size: 26px;
    }

    .inv-trust__text {
      font-size: 15px;
    }

    .inv-trust__cta {
      width: 100%;
      justify-content: center;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .inv-trust__cta,
    .inv-trust__cta svg {
      transition: none;
    }
  }
</style>

<script>
(function() {
  var container = document.querySelector('[data-trust-reviews]');
  if (!container) return;

  var reviews = container.querySelectorAll('[data-trust-review]');
  var dots = container.querySelectorAll('[data-trust-dot]');
  if (reviews.length < 2) return;

  var current = 0;
  var total = reviews.length;
  var interval = null;
  var DELAY = 5000;

  function show(index) {
    reviews[current].classList.remove('inv-trust__review--active');
    if (dots[current]) {
      dots[current].classList.remove('inv-trust__reviews-dot--active');
      dots[current].setAttribute('aria-selected', 'false');
    }
    current = index;
    reviews[current].classList.add('inv-trust__review--active');
    if (dots[current]) {
      dots[current].classList.add('inv-trust__reviews-dot--active');
      dots[current].setAttribute('aria-selected', 'true');
    }
  }

  function next() { show((current + 1) % total); }

  function startAutoplay() {
    stopAutoplay();
    interval = setInterval(next, DELAY);
  }

  function stopAutoplay() {
    if (interval) { clearInterval(interval); interval = null; }
  }

  dots.forEach(function(dot) {
    dot.addEventListener('click', function() {
      show(parseInt(this.dataset.trustDot, 10));
      startAutoplay();
    });
  });

  container.addEventListener('mouseenter', stopAutoplay);
  container.addEventListener('mouseleave', startAutoplay);

  startAutoplay();
})();
</script>

