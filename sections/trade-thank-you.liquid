{% comment %}
  ============================================================================
  TRADE THANK YOU PAGE v1.0
  Conversion confirmation page for trade account applications
  This URL is used for Google Ads conversion tracking
  ============================================================================
{% endcomment %}

<style>
  .trade-thanks {
    --tt-accent: #dc2626;
    --tt-dark: #2d2d2d;
    --tt-success: #16a34a;
    --tt-white: #ffffff;
    --tt-light: #f5f5f5;
    --tt-text: #374151;
    --tt-text-muted: #6b7280;
    --tt-border: #e5e7eb;
  }

  .trade-thanks * {
    box-sizing: border-box;
  }

  .trade-thanks__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 80px 20px 100px;
    text-align: center;
  }

  .trade-thanks__icon {
    width: 80px;
    height: 80px;
    background: var(--tt-success);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 32px;
    animation: tt-pop 0.5s ease-out;
  }

  @keyframes tt-pop {
    0% {
      transform: scale(0);
      opacity: 0;
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .trade-thanks__icon svg {
    width: 40px;
    height: 40px;
    color: var(--tt-white);
  }

  .trade-thanks__heading {
    font-size: clamp(28px, 5vw, 40px);
    font-weight: 900;
    color: var(--tt-dark);
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .trade-thanks__text {
    font-size: 18px;
    color: var(--tt-text);
    line-height: 1.6;
    margin: 0 0 40px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .trade-thanks__next-steps {
    background: var(--tt-light);
    padding: 40px;
    margin-bottom: 40px;
    text-align: left;
  }

  .trade-thanks__next-steps-title {
    font-size: 18px;
    font-weight: 800;
    color: var(--tt-dark);
    margin: 0 0 24px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    text-align: center;
  }

  .trade-thanks__steps {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 20px;
  }

  .trade-thanks__step {
    display: flex;
    align-items: flex-start;
    gap: 16px;
  }

  .trade-thanks__step-number {
    width: 32px;
    height: 32px;
    background: var(--tt-dark);
    color: var(--tt-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 700;
    flex-shrink: 0;
  }

  .trade-thanks__step-content h4 {
    font-size: 15px;
    font-weight: 700;
    color: var(--tt-dark);
    margin: 0 0 4px;
  }

  .trade-thanks__step-content p {
    font-size: 14px;
    color: var(--tt-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .trade-thanks__ctas {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
    margin-bottom: 48px;
  }

  .trade-thanks__btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    font-size: 15px;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    transition: all 0.2s ease;
  }

  .trade-thanks__btn--primary {
    background: var(--tt-accent);
    color: var(--tt-white);
  }

  .trade-thanks__btn--primary:hover {
    background: #b91c1c;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(220, 38, 38, 0.3);
  }

  .trade-thanks__btn--secondary {
    background: var(--tt-dark);
    color: var(--tt-white);
  }

  .trade-thanks__btn--secondary:hover {
    background: #1a1a1a;
    transform: translateY(-2px);
  }

  .trade-thanks__contact {
    padding-top: 32px;
    border-top: 1px solid var(--tt-border);
  }

  .trade-thanks__contact-title {
    font-size: 14px;
    font-weight: 700;
    color: var(--tt-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 16px;
  }

  .trade-thanks__contact-items {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 32px;
  }

  .trade-thanks__contact-item {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--tt-text);
    font-size: 15px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .trade-thanks__contact-item:hover {
    color: var(--tt-accent);
  }

  .trade-thanks__contact-item svg {
    width: 18px;
    height: 18px;
    color: var(--tt-accent);
  }

  /* Responsive */
  @media (max-width: 600px) {
    .trade-thanks__container {
      padding: 60px 20px 80px;
    }

    .trade-thanks__icon {
      width: 64px;
      height: 64px;
    }

    .trade-thanks__icon svg {
      width: 32px;
      height: 32px;
    }

    .trade-thanks__next-steps {
      padding: 24px;
    }

    .trade-thanks__ctas {
      flex-direction: column;
    }

    .trade-thanks__btn {
      width: 100%;
      justify-content: center;
    }

    .trade-thanks__contact-items {
      flex-direction: column;
      align-items: center;
      gap: 16px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .trade-thanks__icon {
      animation: none;
    }

    .trade-thanks__btn {
      transition: none;
    }

    .trade-thanks__btn:hover {
      transform: none;
    }
  }
</style>

<section class="trade-thanks">
  <div class="trade-thanks__container">

    <div class="trade-thanks__icon">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" aria-hidden="true">
        <path d="M20 6L9 17l-5-5"/>
      </svg>
    </div>

    <h1 class="trade-thanks__heading">{{ section.settings.heading }}</h1>
    <p class="trade-thanks__text">{{ section.settings.text }}</p>

    <div class="trade-thanks__next-steps">
      <h2 class="trade-thanks__next-steps-title">What Happens Next</h2>
      <ol class="trade-thanks__steps">
        <li class="trade-thanks__step">
          <span class="trade-thanks__step-number">1</span>
          <div class="trade-thanks__step-content">
            <h4>We Review Your Application</h4>
            <p>Our team will review your details and set up your trade account. Most applications are processed within 24 hours.</p>
          </div>
        </li>
        <li class="trade-thanks__step">
          <span class="trade-thanks__step-number">2</span>
          <div class="trade-thanks__step-content">
            <h4>You'll Receive Confirmation</h4>
            <p>We'll send you an email with your account details and how to access your trade pricing.</p>
          </div>
        </li>
        <li class="trade-thanks__step">
          <span class="trade-thanks__step-number">3</span>
          <div class="trade-thanks__step-content">
            <h4>Start Ordering</h4>
            <p>Log in to see your exclusive trade prices and place your first order with fast UK delivery.</p>
          </div>
        </li>
      </ol>
    </div>

    <div class="trade-thanks__ctas">
      <a href="/" class="trade-thanks__btn trade-thanks__btn--primary">
        Browse Our Products
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
      <a href="tel:{{ section.settings.phone_number | remove: ' ' }}" class="trade-thanks__btn trade-thanks__btn--secondary">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
        Call Us Now
      </a>
    </div>

    <div class="trade-thanks__contact">
      <p class="trade-thanks__contact-title">Questions? Get in touch</p>
      <div class="trade-thanks__contact-items">
        <a href="tel:{{ section.settings.phone_number | remove: ' ' }}" class="trade-thanks__contact-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          {{ section.settings.phone_number }}
        </a>
        <a href="mailto:{{ section.settings.email }}" class="trade-thanks__contact-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          {{ section.settings.email }}
        </a>
      </div>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Trade Thank You",
  "tag": "section",
  "class": "section-trade-thanks",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Application Received!"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Body text",
      "default": "Thanks for your interest in a trade account. We've received your application and will be in touch shortly."
    },
    {
      "type": "header",
      "content": "Contact Details"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone number",
      "default": "01843 593 440"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address",
      "default": "sales@invictatools.co.uk"
    }
  ],
  "presets": [
    {
      "name": "Trade Thank You"
    }
  ]
}
{% endschema %}
