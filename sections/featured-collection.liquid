<script>
  /**
   * Invicta Featured Collection Slider v1.2
   * Handles horizontal scroll navigation with theme editor support
   */
  (function() {
    'use strict';
    
    const SECTION_ID = '{{ section.id }}';
    
    /**
     * Check if user prefers reduced motion
     * @returns {boolean}
     */
    function prefersReducedMotion() {
      return window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    }
    
    /**
     * Initialise slider functionality
     * @returns {void}
     */
    function initSlider() {
      const section = document.getElementById('collection-' + SECTION_ID);
      if (!section) return;
      
      const slider = section.querySelector('.inv-featured-collection__grid--slider');
      if (!slider) return;
      
      const prevBtn = section.querySelector('.inv-featured-collection__nav-btn--prev');
      const nextBtn = section.querySelector('.inv-featured-collection__nav-btn--next');
      
      if (!prevBtn || !nextBtn) return;
      
      const styles = getComputedStyle(section);
      const gapValue = styles.getPropertyValue('--inv-fc-gap').trim() || '12px';
      const gap = parseInt(gapValue, 10) || 12;
      
      const firstSlide = slider.querySelector('.inv-featured-collection__slide');
      const slideWidth = firstSlide ? firstSlide.offsetWidth : 260;
      const scrollAmount = slideWidth + gap;
      
      /**
       * Scroll the slider by a given amount
       * @param {number} amount - Pixels to scroll (negative for left)
       */
      function scrollSlider(amount) {
        const behavior = prefersReducedMotion() ? 'auto' : 'smooth';
        slider.scrollBy({ left: amount, behavior: behavior });
      }
      
      prevBtn.addEventListener('click', function() {
        scrollSlider(-scrollAmount);
      });
      
      nextBtn.addEventListener('click', function() {
        scrollSlider(scrollAmount);
      });
    }
    
    /**
     * Handle Shopify theme editor section events
     * @param {Event} event - Shopify section event
     */
    function handleSectionEvent(event) {
      if (event.detail && event.detail.sectionId === SECTION_ID) {
        initSlider();
      }
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initSlider);
    } else {
      initSlider();
    }
    
    document.addEventListener('shopify:section:load', handleSectionEvent);
    document.addEventListener('shopify:section:select', handleSectionEvent);
  })();
</script>

