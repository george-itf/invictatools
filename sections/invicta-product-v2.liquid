{%- comment -%} Sticky ATC behavior — show bar when main ATC scrolls out of view {%- endcomment -%}
<script>
(function() {
  var stickyBar = document.querySelector('[data-sticky-atc]');
  var mainAtc = document.querySelector('[data-atc-btn]');
  var stickyBtn = document.querySelector('[data-sticky-atc-btn]');
  if (!stickyBar || !mainAtc) return;

  var observer = new IntersectionObserver(function(entries) {
    entries.forEach(function(entry) {
      if (entry.isIntersecting) {
        stickyBar.classList.remove('inv-pdp__sticky-atc--visible');
      } else {
        stickyBar.classList.add('inv-pdp__sticky-atc--visible');
      }
    });
  }, { threshold: 0 });

  observer.observe(mainAtc);

  if (stickyBtn) {
    stickyBtn.addEventListener('click', function() {
      if (stickyBtn.disabled) return;
      var variantId = stickyBtn.getAttribute('data-variant-id');
      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ items: [{ id: parseInt(variantId, 10), quantity: 1 }] })
      }).then(function(r) { return r.json(); })
      .then(function() {
        stickyBtn.textContent = 'Added!';
        setTimeout(function() { stickyBtn.textContent = 'Add to Cart'; }, 1500);
        document.dispatchEvent(new CustomEvent('cart:refresh'));
      });
    });
  }
})();
</script>

{%- comment -%} Recommendations AJAX loader {%- endcomment -%}
<script>
(function() {
  var recsContainer = document.querySelector('[data-recommendations]');
  if (!recsContainer) return;
  var productId = recsContainer.dataset.productId;
  var limit = recsContainer.dataset.limit || 8;
  var grid = recsContainer.querySelector('[data-recs-grid]');
  if (!productId || !grid) return;

  var url = '/recommendations/products?section_id=invicta-recommendations-ajax&product_id=' + productId + '&limit=' + limit;
  fetch(url)
    .then(function(r) { return r.text(); })
    .then(function(html) {
      var temp = document.createElement('div');
      temp.innerHTML = html;
      var items = temp.querySelectorAll('.inv-recs__item');
      if (items.length > 0) {
        items.forEach(function(item) { grid.appendChild(item); });
        recsContainer.classList.remove('inv-pdp--hidden');
      }
    })
    .catch(function() {});
})();
</script>

{%- comment -%} Inline VAT toggle controller {%- endcomment -%}
<script>
(function() {
  var toggle = document.querySelector('[data-vat-switch]');
  if (!toggle) return;
  var labelInc = document.querySelector('[data-vat-label-inc]');
  var labelEx = document.querySelector('[data-vat-label-ex]');

  function getMode() {
    try { return localStorage.getItem('invicta-vat-mode') || 'inc'; } catch(e) { return 'inc'; }
  }

  function setMode(mode) {
    try { localStorage.setItem('invicta-vat-mode', mode); } catch(e) {}
    toggle.setAttribute('aria-checked', mode === 'inc' ? 'true' : 'false');
    if (labelInc) labelInc.classList.toggle('inv-pdp__vat-toggle-label--active', mode === 'inc');
    if (labelEx) labelEx.classList.toggle('inv-pdp__vat-toggle-label--active', mode === 'ex');
    document.dispatchEvent(new CustomEvent('invicta:vat-toggle', { detail: { mode: mode } }));
  }

  // Init from stored state
  var current = getMode();
  toggle.setAttribute('aria-checked', current === 'inc' ? 'true' : 'false');
  if (labelInc) labelInc.classList.toggle('inv-pdp__vat-toggle-label--active', current === 'inc');
  if (labelEx) labelEx.classList.toggle('inv-pdp__vat-toggle-label--active', current === 'ex');

  toggle.addEventListener('click', function() {
    var now = getMode();
    setMode(now === 'inc' ? 'ex' : 'inc');
  });

  // Sync with header toggle
  document.addEventListener('invicta:vat-toggle', function(e) {
    if (e.detail && e.detail.mode) {
      var mode = e.detail.mode;
      toggle.setAttribute('aria-checked', mode === 'inc' ? 'true' : 'false');
      if (labelInc) labelInc.classList.toggle('inv-pdp__vat-toggle-label--active', mode === 'inc');
      if (labelEx) labelEx.classList.toggle('inv-pdp__vat-toggle-label--active', mode === 'ex');
    }
  });
})();
</script>

