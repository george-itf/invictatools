              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        {% endif %}

        {%- comment -%} Facebook {%- endcomment -%}
        {% if section.settings.facebook_url != blank %}
          <a 
            href="{{ section.settings.facebook_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="review-carousel__platform-link-{{ ai_gen_id }} review-carousel__platform-link-{{ ai_gen_id }}--facebook"
            aria-label="{{ section.settings.facebook_text }}"
          >
            <svg class="review-carousel__platform-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            <span>{{ section.settings.facebook_text }}</span>
            <svg class="review-carousel__platform-arrow-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        {% endif %}

        {%- comment -%} Trustpilot {%- endcomment -%}
        {% if section.settings.trustpilot_url != blank %}
          <a 
            href="{{ section.settings.trustpilot_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="review-carousel__platform-link-{{ ai_gen_id }} review-carousel__platform-link-{{ ai_gen_id }}--trustpilot"
            aria-label="{{ section.settings.trustpilot_text }}"
          >
            <svg class="review-carousel__platform-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 0l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 0z"/>
            </svg>
            <span>{{ section.settings.trustpilot_text }}</span>
            <svg class="review-carousel__platform-arrow-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        {% endif %}

      </div>
    {% endif %}

  </div>
</section>

<script>
/**
 * Review Carousel Auto-Scroll
 * Continuously scrolls reviews left, loops seamlessly.
 * Performance: pauses rAF when off-screen or tab is backgrounded.
 */
document.addEventListener('DOMContentLoaded', () => {
  const carousel = document.querySelector('.review-carousel__track-{{ ai_gen_id }}');
  const section = document.querySelector('.review-carousel-{{ ai_gen_id }}');
  if (!carousel || !section) return;

  let scrollPosition = 0;
  const speed = 0.5;
  let rafId = null;
  let playing = false;       /* master play/pause state */
  let isVisible = true;      /* IntersectionObserver: section in viewport */
  let isTabActive = true;    /* Page Visibility API: tab is foreground */

  /* Duplicate slides for seamless looping */
  const slides = carousel.innerHTML;
  carousel.insertAdjacentHTML('beforeend', slides);

  /**
   * Determines if the animation should be running and starts/stops accordingly.
   */
  function updatePlayState() {
    const shouldPlay = isVisible && isTabActive;
    if (shouldPlay && !playing) {
      playing = true;
      rafId = requestAnimationFrame(autoScroll);
    } else if (!shouldPlay && playing) {
      playing = false;
      if (rafId) {
        cancelAnimationFrame(rafId);
        rafId = null;
      }
    }
  }

  /**
   * Animates continuous scroll — only schedules next frame when playing.
   */
  function autoScroll() {
    if (!playing) return;
    scrollPosition += speed;
    if (scrollPosition >= carousel.scrollWidth / 2) {
      scrollPosition = 0;
    }
    carousel.style.transform = `translateX(${-scrollPosition}px)`;
    rafId = requestAnimationFrame(autoScroll);
  }

  /* --- IntersectionObserver: pause when carousel is off-screen --- */
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      isVisible = entry.isIntersecting;
      updatePlayState();
    });
  }, { threshold: 0 });
  observer.observe(section);

  /* --- Page Visibility API: pause when tab is backgrounded --- */
  document.addEventListener('visibilitychange', () => {
    isTabActive = !document.hidden;
    updatePlayState();
  });

  /* Kick off initial state check */
  isTabActive = !document.hidden;
  updatePlayState();
});
</script>

