<section class="review-carousel-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <div class="review-carousel__container-{{ ai_gen_id }}">

    {%- comment -%} HEADER {%- endcomment -%}
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="review-carousel__header-{{ ai_gen_id }}">
        {% if section.settings.heading != blank %}
          <h2 class="review-carousel__title-{{ ai_gen_id }}">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="review-carousel__subtitle-{{ ai_gen_id }}">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {%- comment -%} CAROUSEL {%- endcomment -%}
    <div class="review-carousel__wrapper-{{ ai_gen_id }}">
      <div class="review-carousel__track-{{ ai_gen_id }}">
        {% for i in (1..10) %}
          {% assign review_enabled_key = 'review_' | append: i | append: '_enabled' %}
          {% assign review_rating_key = 'review_' | append: i | append: '_rating' %}
          {% assign review_text_key = 'review_' | append: i | append: '_text' %}
          {% assign review_author_key = 'review_' | append: i | append: '_author' %}
          {% assign review_avatar_key = 'review_' | append: i | append: '_avatar' %}

          {% assign review_enabled = section.settings[review_enabled_key] %}
          {% assign review_rating = section.settings[review_rating_key] %}
          {% assign review_text = section.settings[review_text_key] %}
          {% assign review_author = section.settings[review_author_key] %}
          {% assign review_avatar = section.settings[review_avatar_key] %}

          {% if review_enabled %}
            <div class="review-carousel__slide-{{ ai_gen_id }}">

              {%- comment -%} Avatar {%- endcomment -%}
              <div class="review-carousel__avatar-{{ ai_gen_id }}">
                {% if review_avatar %}
                  <img 
                    src="{{ review_avatar | image_url: width: 120 }}" 
                    alt="{{ review_author | escape }}" 
                    width="60" 
                    height="60" 
                    loading="lazy"
                  >
                {% else %}
                  <svg width="32" height="32" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
                {% endif %}
              </div>

              {%- comment -%} Review Content {%- endcomment -%}
              <div class="review-carousel__content-{{ ai_gen_id }}">

                {%- comment -%} Stars {%- endcomment -%}
                <div class="review-carousel__stars-{{ ai_gen_id }}" role="img" aria-label="{{ review_rating }} out of 5 stars">
                  {% for star in (1..5) %}
                    {% if star <= review_rating %}
                      <svg class="review-carousel__star-{{ ai_gen_id }}" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {% else %}
                      <svg class="review-carousel__star-{{ ai_gen_id }} empty" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {% endif %}
                  {% endfor %}
                </div>

                <p class="review-carousel__text-{{ ai_gen_id }}">{{ review_text }}</p>
                <div class="review-carousel__author-name-{{ ai_gen_id }}">{{ review_author }}</div>

              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {%- comment -%} REVIEW PLATFORM LINKS {%- endcomment -%}
    {% if section.settings.google_url != blank or section.settings.facebook_url != blank or section.settings.trustpilot_url != blank %}
      <div class="review-carousel__platforms-{{ ai_gen_id }}">

        {%- comment -%} Google {%- endcomment -%}
        {% if section.settings.google_url != blank %}
          <a 
            href="{{ section.settings.google_url }}"
            target="_blank"
            rel="noopener noreferrer"
            class="review-carousel__platform-link-{{ ai_gen_id }} review-carousel__platform-link-{{ ai_gen_id }}--google"
            aria-label="{{ section.settings.google_text }}"
          >
            <svg class="review-carousel__platform-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
