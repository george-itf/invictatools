{% doc %}
  @prompt
    an image banner that adapts to the size of the device so you can see the full width of the image on mobile desktop and tablet
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-responsive-banner-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-responsive-banner__wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
  }

  .ai-responsive-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-responsive-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-responsive-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-height: {{ block.settings.desktop_height }}px;
  }

  .ai-responsive-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-responsive-banner__content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 90%;
    max-width: {{ block.settings.content_max_width }}px;
    z-index: 2;
  }

  .ai-responsive-banner__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-responsive-banner__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-responsive-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
  }

  .ai-responsive-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-responsive-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-responsive-banner__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.85);
    }

    .ai-responsive-banner__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }

    .ai-responsive-banner__button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_text_size }}px * 0.9);
      padding: 12px 28px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-responsive-banner__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
      margin-bottom: 12px;
    }

    .ai-responsive-banner__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.85);
      margin-bottom: 20px;
    }

    .ai-responsive-banner__button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_text_size }}px * 0.85);
      padding: 12px 24px;
    }

    .ai-responsive-banner__placeholder-{{ ai_gen_id }} svg {
      max-height: {{ block.settings.mobile_height }}px;
    }
  }

  {% if block.settings.desktop_height > 0 %}
    @media screen and (min-width: 990px) {
      .ai-responsive-banner__image-{{ ai_gen_id }} {
        height: {{ block.settings.desktop_height }}px;
        object-fit: cover;
      }
    }
  {% endif %}

  {% if block.settings.mobile_height > 0 %}
    @media screen and (max-width: 749px) {
      .ai-responsive-banner__image-{{ ai_gen_id }} {
        height: {{ block.settings.mobile_height }}px;
        object-fit: cover;
      }
    }
  {% endif %}
{% endstyle %}

<responsive-banner-{{ ai_gen_id }} class="ai-responsive-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-responsive-banner__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        srcset="
          {{ block.settings.image | image_url: width: 375 }} 375w,
          {{ block.settings.image | image_url: width: 750 }} 750w,
          {{ block.settings.image | image_url: width: 1100 }} 1100w,
          {{ block.settings.image | image_url: width: 1500 }} 1500w,
          {{ block.settings.image | image_url: width: 2000 }} 2000w
        "
        sizes="100vw"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-responsive-banner__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-responsive-banner__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-responsive-banner__empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-responsive-banner__overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.show_content %}
      <div class="ai-responsive-banner__content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-responsive-banner__heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-responsive-banner__text-{{ ai_gen_id }}">
            {{ block.settings.text }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a
            href="{{ block.settings.button_link }}"
            class="ai-responsive-banner__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</responsive-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class ResponsiveBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.handleImageLoad();
      }

      handleImageLoad() {
        const image = this.querySelector('.ai-responsive-banner__image-{{ ai_gen_id }}');
        if (image && !image.complete) {
          image.addEventListener('load', () => {
            this.style.opacity = '1';
          });
        }
      }
    }

    customElements.define('responsive-banner-{{ ai_gen_id }}', ResponsiveBanner{{ ai_gen_id }});
  })();
</script>

